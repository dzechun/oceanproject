<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantechs.provider.esop.mapper.EsopHtNewsAttachmentMapper">
    <resultMap id="BaseResultMap" type="com.fantechs.common.base.general.entity.esop.history.EsopHtNewsAttachment">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="ht_news_attachment_id" jdbcType="BIGINT" property="htNewsAttachmentId"/>
        <result column="news_attachment_id" jdbcType="BIGINT" property="newsAttachmentId"/>
        <result column="news_id" jdbcType="BIGINT" property="newsId"/>
        <result column="file_org_name" jdbcType="VARCHAR" property="fileOrgName"/>
        <result column="file_name" jdbcType="VARCHAR" property="fileName"/>
        <result column="store_path" jdbcType="VARCHAR" property="storePath"/>
        <result column="access_url" jdbcType="VARCHAR" property="accessUrl"/>
        <result column="status" jdbcType="TINYINT" property="status"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="org_id" jdbcType="BIGINT" property="orgId"/>
        <result column="create_user_id" jdbcType="BIGINT" property="createUserId"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId"/>
        <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime"/>
        <result column="option1" jdbcType="VARCHAR" property="option1"/>
        <result column="option2" jdbcType="VARCHAR" property="option2"/>
        <result column="option3" jdbcType="VARCHAR" property="option3"/>
        <result column="create_user_name" jdbcType="VARCHAR" property="createUserName"/>
        <result column="modified_user_name" jdbcType="VARCHAR" property="modifiedUserName"/>
        <result column="organization_name" jdbcType="VARCHAR" property="organizationName"/>
    </resultMap>

    <sql id="Base_Column_List">
    ehna.esop_ht_news_attachment,
    ehna.news_attachment_id,
    ehna.news_id,
    ehna.file_org_name,
    ehna.file_name,
    ehna.store_path,
    ehna.access_url,
    ehna.`status`,
    ehna.remark,
    ehna.org_id,
    ehna.create_user_id,
    ehna.create_time,
    ehna.modified_user_id,
    ehna.modified_time,
    ehna.option1,
    ehna.option2,
    ehna.option3
  </sql>

    <select id="findHtList" parameterType="map" resultMap="BaseResultMap">
        select <include refid="Base_Column_List"></include>,
        u.user_name as create_user_name,
        s.user_name as modified_user_name,
        bo.organization_name
        from esop_ht_news_attachment ehna
        left join sys_user u on ehna.create_user_id=u.user_id
        left join sys_user s on ehna.modified_user_id=s.user_id
        left join base_organization bo ON ehna.org_id = bo.organization_id
        <where>
            <if test="newsId!=null">
                and ehna.news_id = #{newsId}
            </if>
            <if test="startTime!= null and startTime!= '' and endTime!= null and endTime!= ''">
                and date_format(ehna.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
            </if>
            <if test="status!=null">
                and ehna.status = #{status}
            </if>
            <if test="orgId!=null">
                and ehna.org_id=#{orgId}
            </if>
        </where>
        order by ehna.create_time desc
    </select>
</mapper>
