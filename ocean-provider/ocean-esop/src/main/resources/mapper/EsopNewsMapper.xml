<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantechs.provider.esop.mapper.EsopNewsMapper">
    <resultMap id="BaseResultMap" type="com.fantechs.common.base.general.entity.esop.EsopNews">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="news_id" jdbcType="BIGINT" property="newsId"/>
        <result column="news_code" jdbcType="VARCHAR" property="newsCode"/>
        <result column="news_name" jdbcType="VARCHAR" property="newsName"/>
        <result column="news_title" jdbcType="VARCHAR" property="newsTitle"/>
        <result column="factory_id" jdbcType="BIGINT" property="factoryId"/>
        <result column="work_shop_id" jdbcType="BIGINT" property="workShopId"/>
        <result column="pro_line_id" jdbcType="BIGINT" property="proLineId"/>
        <result column="new_status" jdbcType="TINYINT" property="newStatus"/>
        <result column="audit_user_id" jdbcType="BIGINT" property="auditUserId"/>
        <result column="audit_date" jdbcType="TIMESTAMP" property="auditDate"/>
        <result column="status" jdbcType="TINYINT" property="status"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="org_id" jdbcType="BIGINT" property="orgId"/>
        <result column="create_user_id" jdbcType="BIGINT" property="createUserId"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId"/>
        <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime"/>
        <result column="option1" jdbcType="VARCHAR" property="option1"/>
        <result column="option2" jdbcType="VARCHAR" property="option2"/>
        <result column="option3" jdbcType="VARCHAR" property="option3"/>
        <collection property="list" ofType="com.fantechs.common.base.general.entity.esop.EsopNewsAttachment"
                    column="{newsId=news_id}"
                    select="com.fantechs.provider.esop.mapper.EsopNewsAttachmentMapper.findList">
        </collection>
    </resultMap>

    <resultMap id="BaseResultMapDto" extends="BaseResultMap"
               type="com.fantechs.common.base.general.dto.esop.EsopNewsDto">
        <result column="create_user_name" jdbcType="VARCHAR" property="createUserName"/>
        <result column="modified_user_name" jdbcType="VARCHAR" property="modifiedUserName"/>
        <result column="organization_name" jdbcType="VARCHAR" property="organizationName"/>
        <result column="factory_name" jdbcType="VARCHAR" property="factoryName"/>
        <result column="work_shop_name" jdbcType="VARCHAR" property="workShopName"/>
        <result column="pro_name" jdbcType="VARCHAR" property="proName"/>
        <result column="audit_user_name" jdbcType="VARCHAR" property="auditUserName"/>
    </resultMap>

    <sql id="Base_Column_List">
    en.news_id,
    en.news_code,
    en.news_name,
    en.news_title,
    en.factory_id,
    en.work_shop_id,
    en.pro_line_id,
    en.new_status,
    en.audit_user_id,
    en.audit_date,
    en.`status`,
    en.remark,
    en.org_id,
    en.create_user_id,
    en.create_time,
    en.modified_user_id,
    en.modified_time,
    en.option1,
    en.option2,
    en.option3
  </sql>

    <select id="findList" parameterType="map" resultMap="BaseResultMapDto">
        select <include refid="Base_Column_List"></include>,
        bf.factory_name,bws.work_shop_name,bpl.pro_name,su.user_name as audit_user_name,
        u.user_name as create_user_name,
        s.user_name as modified_user_name,
        bo.organization_name
        from esop_news en
        left join base_factory bf on en.factory_id=bf.factory_id
        left join base_work_shop bws on en.work_shop_id=bws.work_shop_id
        left join base_pro_line bpl on en.pro_line_id=bpl.pro_line_id
        left join sys_user su on en.audit_user_id=su.user_id
        left join sys_user u on en.create_user_id=u.user_id
        left join sys_user s on en.modified_user_id=s.user_id
        left join base_organization bo ON en.org_id = bo.organization_id
        <where>
            <if test="newsCode != null and newsCode!=''">
                and en.news_code like CONCAT('%', #{newsCode}, '%')
            </if>
            <if test="newsTitle != null and newsTitle!=''">
                and en.news_title like CONCAT('%', #{newsTitle}, '%')
            </if>
            <if test="factoryName != null and factoryName!=''">
                and bf.factory_name like CONCAT('%', #{factoryName}, '%')
            </if>
            <if test="workShopName != null and workShopName!=''">
                and bws.work_shop_name like CONCAT('%', #{workShopName}, '%')
            </if>
            <if test="proName != null and proName!=''">
                and bpl.pro_name like CONCAT('%', #{proName}, '%')
            </if>
            <if test="newStatus!=null">
                and en.new_status = #{newStatus}
            </if>
            <if test="startTime!= null and startTime!= '' and endTime!= null and endTime!= ''">
                and date_format(en.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
            </if>
            <if test="status!=null">
                and en.status = #{status}
            </if>
            <if test="orgId!=null">
                and en.org_id=#{orgId}
            </if>
            <!-- 全表单查询 -->
            <if test="query != null">
                and #FULL_FROM_QUERY
            </if>
        </where>
        order by en.modified_time desc
    </select>
</mapper>
