<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantechs.provider.esop.mapper.EsopIssueMapper">
    <resultMap id="BaseResultMap" type="com.fantechs.common.base.general.entity.esop.EsopIssue">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="issue_id" jdbcType="BIGINT" property="issueId"/>
        <result column="issue_code" jdbcType="VARCHAR" property="issueCode"/>
        <result column="issue_name" jdbcType="VARCHAR" property="issueName"/>
        <result column="material_id" jdbcType="BIGINT" property="materialId"/>
        <result column="product_model_id" jdbcType="BIGINT" property="productModelId"/>
        <result column="process_id" jdbcType="BIGINT" property="processId"/>
        <result column="status" jdbcType="TINYINT" property="status"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="org_id" jdbcType="BIGINT" property="orgId"/>
        <result column="create_user_id" jdbcType="BIGINT" property="createUserId"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId"/>
        <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime"/>
        <result column="option1" jdbcType="VARCHAR" property="option1"/>
        <result column="option2" jdbcType="VARCHAR" property="option2"/>
        <result column="option3" jdbcType="VARCHAR" property="option3"/>
        <collection property="list" ofType="com.fantechs.common.base.general.entity.esop.EsopIssueAttachment"
                    column="{issueId=issue_id}"
                    select="com.fantechs.provider.esop.mapper.EsopIssueAttachmentMapper.findList">
        </collection>
    </resultMap>

    <resultMap id="BaseResultMapDto" extends="BaseResultMap"
               type="com.fantechs.common.base.general.dto.esop.EsopIssueDto">
        <result column="create_user_name" jdbcType="VARCHAR" property="createUserName"/>
        <result column="modified_user_name" jdbcType="VARCHAR" property="modifiedUserName"/>
        <result column="organization_name" jdbcType="VARCHAR" property="organizationName"/>
        <result column="material_code" jdbcType="VARCHAR" property="materialCode"/>
        <result column="material_name" jdbcType="VARCHAR" property="materialName"/>
        <result column="product_model_name" jdbcType="VARCHAR" property="productModelName"/>
        <result column="product_model_code" jdbcType="VARCHAR" property="productModelCode"/>
        <result column="product_model_desc" jdbcType="VARCHAR" property="productModelDesc"/>
        <result column="process_name" jdbcType="VARCHAR" property="processName"/>
        <result column="process_code" jdbcType="VARCHAR" property="processCode"/>
    </resultMap>

    <sql id="Base_Column_List">
    ei.issue_id,
    ei.issue_code,
    ei.issue_name,
    ei.material_id,
    ei.process_id,
    ei.`status`,
    ei.remark,
    ei.org_id,
    ei.create_user_id,
    ei.create_time,
    ei.modified_user_id,
    ei.modified_time,
    ei.option1,
    ei.option2,
    ei.option3
  </sql>

    <select id="findList" parameterType="map" resultMap="BaseResultMapDto">
        select <include refid="Base_Column_List"></include>,
        bm.material_code,bm.material_name,bpm.product_model_name,bpm.product_model_code,bpm.product_model_code,bpm.product_model_code,
        bpm.product_model_desc,bpm.product_model_desc,bp.process_name as process_name,bp.process_code as process_code,
        u.user_name as create_user_name,
        s.user_name as modified_user_name,
        bo.organization_name
        from esop_issue ei
        left join base_material bm on ei.material_id=bm.material_id
        left join base_material_tab bmt on ei.material_id=bmt.material_id
        left join base_product_model bpm on ei.product_model_id=bpm.product_model_id
        left join base_process bp on ei.process_id=bp.process_id
        left join sys_user u on ei.create_user_id=u.user_id
        left join sys_user s on ei.modified_user_id=s.user_id
        left join base_organization bo ON ei.org_id = bo.organization_id
        <where>
            <if test="issueCode != null and issueCode!=''">
                and ei.issue_code like CONCAT('%', #{issueCode}, '%')
            </if>
            <if test="issueName != null and issueName!=''">
                and ei.issue_name like CONCAT('%', #{issueName}, '%')
            </if>
            <if test="materialId!=null">
                and ei.material_id=#{materialId}
            </if>
            <if test="processId!=null">
                and ei.process_id=#{processId}
            </if>
            <if test="processCode != null and processCode!=''">
                and bp.process_code=#{processCode}
            </if>
            <if test="processName != null and processName!=''">
                and bp.process_name like CONCAT('%', #{processName}, '%')
            </if>
            <if test="materialCode != null and materialCode!=''">
                and bm.material_code like CONCAT('%', #{materialCode}, '%')
            </if>
            <if test="materialName != null and materialName!=''">
                and bm.material_name like CONCAT('%', #{materialName}, '%')
            </if>
            <if test="productModelName != null and productModelName!=''">
                and bpm.product_model_name like CONCAT('%', #{productModelName}, '%')
            </if>
            <if test="productModelCode != null and productModelCode!='' and codeQueryMark!=1">
                and bpm.product_model_code like CONCAT('%', #{productModelCode}, '%')
            </if>
            <if test="productModelCode != null and productModelCode!='' and codeQueryMark==1">
                and bpm.product_model_code = #{productModelCode}
            </if>
            <if test="startTime!= null and startTime!= '' and endTime!= null and endTime!= ''">
                and date_format(ei.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
            </if>
            <if test="status!=null">
                and ei.status = #{status}
            </if>
            <if test="orgId!=null">
                and ei.org_id=#{orgId}
            </if>
        </where>
        order by ei.modified_time desc
    </select>
</mapper>
