            <if test="orgId!=null and orgId!=''">
                and ewft.org_id = #{orgId}
            </if>
            <if test="workInstructionId!=null and workInstructionId!=''">
                and ewft.work_instruction_id = #{workInstructionId}
            </if>
        </where>
    </select>
