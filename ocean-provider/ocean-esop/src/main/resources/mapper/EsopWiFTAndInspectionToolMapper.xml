    <select id="findList" parameterType="map" resultMap="BaseResultMap">
        SELECT
        <include refid="BaseColumnList"/>
        FROM esop_wi_f_t_and_inspection_tool ewft
        LEFT JOIN esop_work_instruction ewi ON ewft.work_instruction_id = ewi.work_instruction_id
