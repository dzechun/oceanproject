<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantechs.provider.esop.mapper.EsopWiBomMapper">
    <resultMap id="BaseResultMap" type="com.fantechs.common.base.general.entity.esop.EsopWiBom">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="wi_bom_id" jdbcType="BIGINT" property="wiBomId"/>
        <result column="work_instruction_id" jdbcType="BIGINT" property="workInstructionId"/>
        <result column="material_id" jdbcType="BIGINT" property="materialId"/>
        <result column="usage_qty" jdbcType="VARCHAR" property="usageQty"/>
        <result column="status" jdbcType="TINYINT" property="status"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="org_id" jdbcType="BIGINT" property="orgId"/>
        <result column="create_user_id" jdbcType="BIGINT" property="createUserId"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId"/>
        <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime"/>
        <result column="option1" jdbcType="VARCHAR" property="option1"/>
        <result column="option2" jdbcType="VARCHAR" property="option2"/>
        <result column="option3" jdbcType="VARCHAR" property="option3"/>
    </resultMap>

    <resultMap id="BaseResultMapDto" extends="BaseResultMap"
               type="com.fantechs.common.base.general.dto.esop.EsopWiBomDto">
        <result column="material_name" jdbcType="VARCHAR" property="materialName"/>
        <result column="material_code" jdbcType="VARCHAR" property="materialCode"/>
        <result column="material_version" jdbcType="VARCHAR" property="materialVersion"/>
        <result column="material_desc" jdbcType="VARCHAR" property="materialDesc"/>
        <result column="specifications" jdbcType="VARCHAR" property="specifications"/>
    </resultMap>


    <sql id="BaseColumnList">
        ewb.wi_bom_id,
        ewb.work_instruction_id,
        ewb.material_id,
        ewb.usage_qty,
        ewb.status,
        ewb.remark,
        ewb.org_id,
        ewb.create_user_id,
        ewb.create_time,
        ewb.modified_user_id,
        ewb.modified_time,
        ewb.option1,
        ewb.option2,
        ewb.option3
    </sql>

    <select id="findList" resultMap="BaseResultMapDto">
        SELECT<include refid="BaseColumnList"/>,bm.material_name as material_name,
        bm.material_code as material_code,bm.material_version as material_version,bm.material_desc as material_desc,
        CONCAT(bt.length,',',bt.width,',',bt.height) as specifications
        FROM esop_wi_bom ewb
        LEFT JOIN esop_work_instruction ewi ON ewb.work_instruction_id = ewi.work_instruction_id
        LEFT JOIN base_material bm ON ewb.material_id = bm.material_id
        LEFT JOIN base_material_tab bt ON bm.material_id = bt.material_id
        LEFT JOIN sys_user su ON ewb.create_user_id = su.user_id
        LEFT JOIN sys_user sus ON ewb.modified_user_id = sus.user_id
        LEFT JOIN base_organization bo ON ewb.org_id = bo.organization_id
        <where>
            <if test="orgId!=null and orgId!=''">
                and ewb.org_id = #{orgId}
            </if>
            <if test="workInstructionId!=null and workInstructionId!=''">
                and ewb.work_instruction_id = #{workInstructionId}
            </if>
        </where>
    </select>
</mapper>
