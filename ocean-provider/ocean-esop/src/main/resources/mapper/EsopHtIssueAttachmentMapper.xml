<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantechs.provider.esop.mapper.EsopHtIssueAttachmentMapper">
  <resultMap id="BaseResultMap" type="com.fantechs.common.base.general.entity.esop.history.EsopHtIssueAttachment">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="ht_issue_attachment_id" jdbcType="BIGINT" property="htIssueAttachmentId" />
    <result column="issue_attachment_id" jdbcType="BIGINT" property="issueAttachmentId" />
    <result column="issue_id" jdbcType="BIGINT" property="issueId" />
    <result column="file_org_name" jdbcType="VARCHAR" property="fileOrgName" />
    <result column="file_name" jdbcType="VARCHAR" property="fileName" />
    <result column="store_path" jdbcType="VARCHAR" property="storePath" />
    <result column="access_url" jdbcType="VARCHAR" property="accessUrl" />
    <result column="status" jdbcType="TINYINT" property="status" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
    <result column="org_id" jdbcType="BIGINT" property="orgId" />
    <result column="create_user_id" jdbcType="BIGINT" property="createUserId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId" />
    <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime" />
    <result column="option1" jdbcType="VARCHAR" property="option1" />
    <result column="option2" jdbcType="VARCHAR" property="option2" />
    <result column="option3" jdbcType="VARCHAR" property="option3" />

    <result column="create_user_name" jdbcType="VARCHAR" property="createUserName"/>
    <result column="modified_user_name" jdbcType="VARCHAR" property="modifiedUserName"/>
    <result column="organization_name" jdbcType="VARCHAR" property="organizationName"/>
  </resultMap>

  <sql id="Base_Column_List">
    ehia.ht_issue_attachment_id,
    ehia.issue_attachment_id,
    ehia.issue_id,
    ehia.file_org_name,
    ehia.file_name,
    ehia.store_path,
    ehia.access_url,
    ehia.`status`,
    ehia.remark,
    ehia.org_id,
    ehia.create_user_id,
    ehia.create_time,
    ehia.modified_user_id,
    ehia.modified_time,
    ehia.option1,
    ehia.option2,
    ehia.option3
  </sql>

  <select id="findHtList" parameterType="map" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"></include>,
    u.user_name as create_user_name,
    s.user_name as modified_user_name,
    bo.organization_name
    from esop_ht_issue_attachment ehia
    left join sys_user u on ehia.create_user_id=u.user_id
    left join sys_user s on ehia.modified_user_id=s.user_id
    left join base_organization bo ON ehia.org_id = bo.organization_id
    <where>
      <if test="issueId!=null">
        and ehia.issue_id = #{issueId}
      </if>
      <if test="startTime!= null and startTime!= '' and endTime!= null and endTime!= ''">
        and date_format(ehia.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
      </if>
      <if test="status!=null">
        and ehia.status = #{status}
      </if>
      <if test="orgId!=null">
        and ehia.org_id=#{orgId}
      </if>
    </where>
    order by ehia.create_time desc
  </select>
</mapper>
