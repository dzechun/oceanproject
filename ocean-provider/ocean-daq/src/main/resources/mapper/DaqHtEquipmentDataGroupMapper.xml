<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantechs.provider.daq.mapper.DaqHtEquipmentDataGroupMapper">
  <resultMap id="BaseResultMap" type="com.fantechs.common.base.general.entity.daq.DaqHtEquipmentDataGroup">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="ht_equipment_data_group_id" jdbcType="BIGINT" property="htEquipmentDataGroupId" />
    <result column="equipment_data_group_id" jdbcType="BIGINT" property="equipmentDataGroupId" />
    <result column="equipment_data_group_name" jdbcType="VARCHAR" property="equipmentDataGroupName" />
    <result column="data_lenght" jdbcType="INTEGER" property="dataLenght" />
    <result column="status" jdbcType="TINYINT" property="status" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
    <result column="org_id" jdbcType="BIGINT" property="orgId" />
    <result column="create_user_id" jdbcType="BIGINT" property="createUserId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId" />
    <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime" />
    <result column="is_delete" jdbcType="TINYINT" property="isDelete" />
    <result column="option1" jdbcType="VARCHAR" property="option1" />
    <result column="option2" jdbcType="VARCHAR" property="option2" />
    <result column="option3" jdbcType="VARCHAR" property="option3" />
  </resultMap>



  <resultMap id="BaseResultMapDto" extends="BaseResultMap" type="com.fantechs.common.base.general.dto.daq.DaqHtEquipmentDataGroupDto">

  </resultMap>

  <sql id="Base_Column_List">
    ehedg.equipment_data_group_id,
    ehedg.equipment_data_group_name,
    ehedg.data_lenght,
    ehedg.`status`,
    ehedg.remark,
    ehedg.org_id,
    ehedg.create_user_id,
    ehedg.create_time,
    ehedg.modified_user_id,
    ehedg.modified_time,
    ehedg.is_delete,
    ehedg.option1,
    ehedg.option2,
    ehedg.option3
  </sql>

  <select id="findList" parameterType="map" resultMap="BaseResultMapDto">
    select <include refid="Base_Column_List"></include>,
    u.user_name as create_user_name,
    s.user_name as modified_user_name,
    bo.organization_name
    from daq_ht_equipment_data_group ehedg
    left join sys_user u on ehedg.create_user_id=u.user_id
    left join sys_user s on ehedg.modified_user_id=s.user_id
    left join base_organization bo ON ehedg.org_id = bo.organization_id
    <where>
      <if test="equipmentName != null and equipmentName!=''">
        and ehedg.equipment_data_group_name like CONCAT('%', #{equipment_data_group_name}, '%')
      </if>
      <if test="status!=null">
        and ehedg.status = #{status}
      </if>
      <if test="orgId!=null">
        and ehedg.org_id=#{orgId}
      </if>
    </where>
    order by ehedg.create_time desc
  </select>

</mapper>
