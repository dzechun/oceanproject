  <select id="findList" parameterType="map" resultMap="BaseResultMapDto">
    select <include refid="Base_Column_List"></include>,
    su.user_name as audit_user_name,u.user_name as create_user_name,
    s.user_name as modified_user_name,bo.organization_name
    from srm_ht_packing_order shpo
    left join ocean_v2.sys_user su on shpo.audit_user_id=su.user_id
    left join ocean_v2.sys_user u on shpo.create_user_id=u.user_id
    left join ocean_v2.sys_user s on shpo.modified_user_id=s.user_id
    left join fantech_imes_v2.base_organization bo ON shpo.org_id = bo.organization_id
    <where>
      <if test="startTime!= null and startTime!= '' and endTime!= null and endTime!= ''">
        and date_format(shpo.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
      </if>
      <if test="status!=null">
        and shpo.status = #{status}
      </if>
      <if test="orgId!=null">
        and shpo.org_id=#{orgId}
      </if>
    </where>
    order by shpo.create_time desc
  </select>
