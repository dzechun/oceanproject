  <sql id="Base_Column_List">
    shpo.ht_packing_order_id,
    shpo.packing_order_id,
    shpo.packing_order_code,
    shpo.despatch_batch,
    shpo.order_time,
    shpo.supplier_id,
    shpo.total_carton_qty,
