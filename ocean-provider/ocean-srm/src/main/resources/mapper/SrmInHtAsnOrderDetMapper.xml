    <select id="findList" resultMap="BaseResultMapDto">
        select
        <include refid="BaseColumnList"/>,
        opo.purchase_order_code,opod.delivery_date AS order_date,bm.material_code,bm.material_name,bw.warehouse_name,
        bm.material_version,bm.material_desc,bmt.main_unit,
        ( SELECT SUM( wihaods.delivery_qty ) FROM wms_in_asn_order_det wihaods WHERE wihaods.asn_order_id = wihaod.asn_order_id ) AS total_delivery_qty,
        su.user_name AS create_user_name,
        sus.user_name AS modified_user_name,
        bo.organization_name AS organization_Name
        FROM wms_in_ht_asn_order_det wihaod
        LEFT JOIN om_purchase_order_det opod ON wihaod.source_order_id = opod.purchase_order_det_id
        LEFT JOIN om_purchase_order opo ON opod.purchase_order_id = opo.purchase_order_id
        LEFT JOIN base_material bm ON wihaod.material_id = bm.material_id
        LEFT JOIN base_material_tab bmt ON wihaod.material_id = bm.material_id
        LEFT JOIN base_warehouse bw ON wihaod.warehouse_id = bw.warehouse_id
        LEFT JOIN sys_user su ON wihaod.create_user_id = su.user_id
        LEFT JOIN sys_user sus ON wihaod.modified_user_id = sus.user_id
        LEFT JOIN base_organization bo ON wihaod.org_id = bo.organization_id
        <where>
            <if test="asnOrderId !=null and asnOrderId !=''">
                and wihaod.asn_order_id=#{asnOrderId}
            </if>
            <if test="asnOrderDetId !=null and asnOrderDetId!=''">
                and wihaod.asn_order_det_id = #{asnOrderDetId}
            </if>
            <if test="materialCode !=null and materialCode !=''">
                and bm.material_code like CONCAT('%',#{materialCode},'%')
            </if>
        </where>
        group by wihaod.asn_order_det_id
