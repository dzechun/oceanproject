<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantechs.provider.guest.eng.mapper.EngLogisticsRecordMapper">
  <resultMap id="BaseResultMap" type="com.fantechs.common.base.general.entity.eng.EngLogisticsRecord">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="logistics_record_id" jdbcType="BIGINT" property="logisticsRecordId" />
    <result column="contract_qty_order_id" jdbcType="BIGINT" property="contractQtyOrderId" />
    <result column="material_logistics_node" jdbcType="TINYINT" property="materialLogisticsNode" />
    <result column="title" jdbcType="VARCHAR" property="title" />
    <result column="receive_user_id" jdbcType="BIGINT" property="receiveUserId" />
    <result column="read_status" jdbcType="TINYINT" property="readStatus" />
    <result column="status" jdbcType="TINYINT" property="status" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
    <result column="org_id" jdbcType="BIGINT" property="orgId" />
    <result column="create_user_id" jdbcType="BIGINT" property="createUserId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId" />
    <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime" />
    <result column="is_delete" jdbcType="TINYINT" property="isDelete" />
    <result column="option1" jdbcType="VARCHAR" property="option1" />
    <result column="option2" jdbcType="VARCHAR" property="option2" />
    <result column="option3" jdbcType="VARCHAR" property="option3" />
    <result column="message_content" jdbcType="LONGVARCHAR" property="messageContent" />

    <result column="create_user_name" jdbcType="VARCHAR" property="createUserName"/>
    <result column="modified_user_name" jdbcType="VARCHAR" property="modifiedUserName"/>
    <result column="receive_user_name" jdbcType="VARCHAR" property="receiveUserName"/>
  </resultMap>

  <sql id="Base_Column_List">
    lr.logistics_record_id,
    lr.contract_qty_order_id,
    lr.material_logistics_node,
    lr.title,
    lr.message_content,
    lr.receive_user_id,
    lr.read_status,
    lr.`status`,
    lr.remark,
    lr.org_id,
    lr.create_user_id,
    lr.create_time,
    lr.modified_user_id,
    lr.modified_time,
    lr.option1,
    lr.option2,
    lr.option3
  </sql>

  <select id="findList" parameterType="map" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"></include>,
    su.user_name as receive_user_name,
    u.user_name as create_user_name,
    s.user_name as modified_user_name,
    bo.organization_name
    from eng_logistics_record lr
    left join ocean_v2.sys_user su on lr.receive_user_id=su.user_id
    left join ocean_v2.sys_user u on lr.create_user_id=u.user_id
    left join ocean_v2.sys_user s on lr.modified_user_id=s.user_id
    left join fantech_imes_v2.base_organization bo ON lr.org_id = bo.organization_id
    <where>
      <if test="contractQtyOrderId!=null">
        and lr.contract_qty_order_id = #{contractQtyOrderId}
      </if>
      <if test="receiveUserId!=null">
        and lr.receive_user_id = #{receiveUserId}
      </if>
      <if test="title!=null and title != ''">
        and lr.title like CONCAT('%', #{title}, '%')
      </if>
      <if test="messageContent!=null and messageContent != ''">
        and lr.message_content like CONCAT('%', #{messageContent}, '%')
      </if>
      <if test="readStatus!=null">
        and lr.read_status = #{readStatus}
      </if>
      <if test="startTime!= null and startTime!= '' and endTime!= null and endTime!= ''">
        and date_format(lr.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
      </if>
      <if test="status!=null">
        and lr.status = #{status}
      </if>
      <if test="orgId!=null">
        and lr.org_id=#{orgId}
      </if>
    </where>
    order by lr.create_time desc
  </select>
</mapper>