<mapper namespace="com.fantechs.provider.eam.mapper.EamEquRepairOrderReplacementMapper">
  <resultMap id="BaseResultMap" type="com.fantechs.common.base.general.entity.eam.EamEquRepairOrderReplacement">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="equ_repair_order_replacement_id" jdbcType="BIGINT" property="equRepairOrderReplacementId" />
    <result column="equipment_repair_order_id" jdbcType="BIGINT" property="equipmentRepairOrderId" />
    <result column="material_id" jdbcType="BIGINT" property="materialId" />
    <result column="usage_qty" jdbcType="INTEGER" property="usageQty" />
    <result column="status" jdbcType="TINYINT" property="status" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
    <result column="org_id" jdbcType="BIGINT" property="orgId" />
    <result column="create_user_id" jdbcType="BIGINT" property="createUserId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId" />
    <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime" />
    <result column="option1" jdbcType="VARCHAR" property="option1" />
    <result column="option2" jdbcType="VARCHAR" property="option2" />
    <result column="option3" jdbcType="VARCHAR" property="option3" />
  </resultMap>

  <resultMap id="BaseResultMapDto" extends="BaseResultMap" type="com.fantechs.common.base.general.dto.eam.EamEquRepairOrderReplacementDto">
    <result column="create_user_name" jdbcType="VARCHAR" property="createUserName"/>
    <result column="modified_user_name" jdbcType="VARCHAR" property="modifiedUserName"/>
    <result column="organization_name" jdbcType="VARCHAR" property="organizationName"/>
    <result column="material_code" jdbcType="VARCHAR" property="materialCode"/>
    <result column="material_name" jdbcType="VARCHAR" property="materialName"/>
    <result column="material_desc" jdbcType="VARCHAR" property="materialDesc"/>
  </resultMap>

  <sql id="Base_Column_List">
    eeror.equ_repair_order_replacement_id,
    eeror.equipment_repair_order_id,
    eeror.material_id,
    eeror.usage_qty,
    eeror.`status`,
    eeror.remark,
    eeror.org_id,
    eeror.create_user_id,
    eeror.create_time,
    eeror.modified_user_id,
    eeror.modified_time,
    eeror.option1,
    eeror.option2,
    eeror.option3
  </sql>

  <select id="findList" parameterType="map" resultMap="BaseResultMapDto">
    select <include refid="Base_Column_List"></include>,
    bm.material_code,bm.material_name,bm.material_desc,
    u.user_name as create_user_name,
    s.user_name as modified_user_name,
    bo.organization_name
    from fantech_imes_v2.eam_equ_repair_order_replacement eeror
    left join fantech_imes_v2.base_material bm on eeror.material_id = bm.material_id
    left join ocean_v2.sys_user u on eeror.create_user_id=u.user_id
    left join ocean_v2.sys_user s on eeror.modified_user_id=s.user_id
    left join fantech_imes_v2.base_organization bo ON eeror.org_id = bo.organization_id
    <where>
      <if test="equipmentRepairOrderId != null">
        and eeror.equipment_repair_order_id = #{equipmentRepairOrderId}
      </if>
      <if test="startTime!= null and startTime!= '' and endTime!= null and endTime!= ''">
        and date_format(eeror.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
      </if>
      <if test="status!=null">
        and eeror.status = #{status}
      </if>
      <if test="orgId!=null">
        and eeror.org_id=#{orgId}
      </if>
    </where>
    order by eeror.create_time desc
  </select>
</mapper>