    <result column="option1" jdbcType="VARCHAR" property="option1" />
    <result column="option2" jdbcType="VARCHAR" property="option2" />
    <result column="option3" jdbcType="VARCHAR" property="option3" />
  </resultMap>

  <resultMap id="BaseResultMapDto" extends="BaseResultMap" type="com.fantechs.common.base.general.dto.eam.EamEquPointInspectionProjectDto">
    <result column="equipment_category_name" jdbcType="VARCHAR" property="equipmentCategoryName"/>
    <result column="create_user_name" jdbcType="VARCHAR" property="createUserName"/>
    <result column="modified_user_name" jdbcType="VARCHAR" property="modifiedUserName"/>
    <result column="organization_name" jdbcType="VARCHAR" property="organizationName"/>
    <collection property="items" ofType="com.fantechs.common.base.general.dto.eam.EamEquPointInspectionProjectItemDto"
                column="{equPointInspectionProjectId=equ_point_inspection_project_id}" select="com.fantechs.provider.eam.mapper.EamEquPointInspectionProjectItemMapper.findList">
    </collection>
  </resultMap>

  <sql id="Base_Column_List">
    eepip.equ_point_inspection_project_id,
    eepip.equ_point_inspection_project_code,
    eepip.equ_point_inspection_project_name,
    eepip.equ_point_inspection_project_desc,
    eepip.equipment_category_id,
    eepip.`status`,
    eepip.remark,
    eepip.org_id,
    eepip.create_user_id,
    eepip.create_time,
    eepip.modified_user_id,
    eepip.modified_time,
    eepip.option1,
    eepip.option2,
    eepip.option3
  </sql>

  <select id="findList" parameterType="map" resultMap="BaseResultMapDto">
    select <include refid="Base_Column_List"></include>,
    eec.equipment_category_name,
    u.user_name as create_user_name,
    s.user_name as modified_user_name,
    bo.organization_name
    from eam_equ_point_inspection_project eepip
    LEFT JOIN eam_equipment_category eec ON eepip.equipment_category_id = eec.equipment_category_id
    left join sys_user u on eepip.create_user_id=u.user_id
    left join sys_user s on eepip.modified_user_id=s.user_id
    left join base_organization bo ON eepip.org_id = bo.organization_id
    <where>
      <if test="equipmentCategoryId != null">
        and eepip.equipment_category_id = #{equipmentCategoryId}
      </if>
      <if test="equPointInspectionProjectCode != null and equPointInspectionProjectCode!=''">
        and eepip.equ_point_inspection_project_code like CONCAT('%', #{equPointInspectionProjectCode}, '%')
      </if>
      <if test="equPointInspectionProjectDesc != null and equPointInspectionProjectDesc!=''">
        and eepip.equ_point_inspection_project_desc like CONCAT('%', #{equPointInspectionProjectDesc}, '%')
      </if>
      <if test="equPointInspectionProjectName != null and equPointInspectionProjectName!=''">
        and eepip.equ_point_inspection_project_name like CONCAT('%', #{equPointInspectionProjectName}, '%')
      </if>
      <if test="status!=null">
        and eepip.status = #{status}
      </if>
      <if test="orgId!=null">
        and eepip.org_id=#{orgId}
      </if>
      <!-- 全表单查询 -->
      <if test="query != null">
        and #FULL_FROM_QUERY
      </if>
    </where>
    order by eepip.create_time desc
  </select>
