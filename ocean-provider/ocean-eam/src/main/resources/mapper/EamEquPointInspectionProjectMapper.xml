    -->
    <id column="equ_point_inspection_project_id" jdbcType="BIGINT" property="equPointInspectionProjectId" />
    <result column="equ_point_inspection_project_code" jdbcType="VARCHAR" property="equPointInspectionProjectCode" />
    <result column="equ_point_inspection_project_name" jdbcType="VARCHAR" property="equPointInspectionProjectName" />
    <result column="equ_point_inspection_project_desc" jdbcType="VARCHAR" property="equPointInspectionProjectDesc" />
    <result column="equipment_category_id" jdbcType="BIGINT" property="equipmentCategoryId" />
    <result column="status" jdbcType="TINYINT" property="status" />
