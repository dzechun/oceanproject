<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantechs.provider.eam.mapper.EamEquipmentCategoryMapper">
  <resultMap id="BaseResultMap" type="com.fantechs.common.base.general.entity.eam.EamEquipmentCategory">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="equipment_category_id" jdbcType="BIGINT" property="equipmentCategoryId" />
    <result column="equipment_category_code" jdbcType="VARCHAR" property="equipmentCategoryCode" />
    <result column="equipment_category_name" jdbcType="VARCHAR" property="equipmentCategoryName" />
    <result column="equipment_category_desc" jdbcType="VARCHAR" property="equipmentCategoryDesc" />
    <result column="status" jdbcType="TINYINT" property="status" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
    <result column="org_id" jdbcType="BIGINT" property="orgId" />
    <result column="create_user_id" jdbcType="BIGINT" property="createUserId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId" />
    <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime" />
    <result column="option1" jdbcType="VARCHAR" property="option1" />
    <result column="option2" jdbcType="VARCHAR" property="option2" />
    <result column="option3" jdbcType="VARCHAR" property="option3" />
  </resultMap>

  <resultMap id="BaseResultMapDto" extends="BaseResultMap" type="com.fantechs.common.base.general.dto.eam.EamEquipmentCategoryDto">
    <result column="create_user_name" jdbcType="VARCHAR" property="createUserName"/>
    <result column="modified_user_name" jdbcType="VARCHAR" property="modifiedUserName"/>
    <result column="organization_name" jdbcType="VARCHAR" property="organizationName"/>
  </resultMap>

  <sql id="Base_Column_List">
    eec.equipment_category_id,
    eec.equipment_category_code,
    eec.equipment_category_name,
    eec.equipment_category_desc,
    eec.`status`,
    eec.remark,
    eec.org_id,
    eec.create_user_id,
    eec.create_time,
    eec.modified_user_id,
    eec.modified_time,
    eec.option1,
    eec.option2,
    eec.option3
  </sql>

  <select id="findList" parameterType="map" resultMap="BaseResultMapDto">
    select <include refid="Base_Column_List"></include>,
    u.user_name as create_user_name,
    s.user_name as modified_user_name,
    bo.organization_name
    from eam_equipment_category eec
    left join sys_user u on eec.create_user_id=u.user_id
    left join sys_user s on eec.modified_user_id=s.user_id
    left join base_organization bo ON eec.org_id = bo.organization_id
    <where>
      <if test="equipmentCategoryCode != null and equipmentCategoryCode!=''">
        and eec.equipment_category_code like CONCAT('%', #{equipmentCategoryCode}, '%')
      </if>
      <if test="equipmentCategoryDesc != null and equipmentCategoryDesc!=''">
        and eec.equipment_category_desc like CONCAT('%', #{equipmentCategoryDesc}, '%')
      </if>
      <if test="startTime!= null and startTime!= '' and endTime!= null and endTime!= ''">
        and date_format(eec.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
      </if>
      <if test="status!=null">
        and eec.status = #{status}
      </if>
      <if test="orgId!=null">
        and eec.org_id=#{orgId}
      </if>
    </where>
    order by eec.create_time desc
  </select>
</mapper>
