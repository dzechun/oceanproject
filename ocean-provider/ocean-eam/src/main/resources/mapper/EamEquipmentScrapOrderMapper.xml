<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantechs.provider.eam.mapper.EamEquipmentScrapOrderMapper">
  <resultMap id="BaseResultMap" type="com.fantechs.common.base.general.entity.eam.EamEquipmentScrapOrder">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="equipment_scrap_order_id" jdbcType="BIGINT" property="equipmentScrapOrderId" />
    <result column="equipment_scrap_order_code" jdbcType="VARCHAR" property="equipmentScrapOrderCode" />
    <result column="apply_user_id" jdbcType="BIGINT" property="applyUserId" />
    <result column="apply_dept_id" jdbcType="BIGINT" property="applyDeptId" />
    <result column="apply_time" jdbcType="TIMESTAMP" property="applyTime" />
    <result column="use_user_id" jdbcType="BIGINT" property="useUserId" />
    <result column="order_status" jdbcType="TINYINT" property="orderStatus" />
    <result column="use_dept_id" jdbcType="BIGINT" property="useDeptId" />
    <result column="status" jdbcType="TINYINT" property="status" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
    <result column="org_id" jdbcType="BIGINT" property="orgId" />
    <result column="create_user_id" jdbcType="BIGINT" property="createUserId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId" />
    <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime" />
    <result column="option1" jdbcType="VARCHAR" property="option1" />
    <result column="option2" jdbcType="VARCHAR" property="option2" />
    <result column="option3" jdbcType="VARCHAR" property="option3" />
  </resultMap>

  <resultMap id="BaseResultMapDto" extends="BaseResultMap" type="com.fantechs.common.base.general.dto.eam.EamEquipmentScrapOrderDto">
    <result column="create_user_name" jdbcType="VARCHAR" property="createUserName"/>
    <result column="modified_user_name" jdbcType="VARCHAR" property="modifiedUserName"/>
    <result column="organization_name" jdbcType="VARCHAR" property="organizationName"/>
    <result column="apply_dept_name" jdbcType="VARCHAR" property="applyDeptName"/>
    <result column="use_dept_name" jdbcType="VARCHAR" property="useDeptName"/>
    <result column="apply_user_name" jdbcType="VARCHAR" property="applyUserName"/>
    <result column="use_user_name" jdbcType="VARCHAR" property="useUserName"/>
    <collection property="list" ofType="com.fantechs.common.base.general.dto.eam.EamEquipmentScrapOrderDetDto"
                column="{equipmentScrapOrderId=equipment_scrap_order_id}" select="com.fantechs.provider.eam.mapper.EamEquipmentScrapOrderDetMapper.findList">
    </collection>
  </resultMap>

  <sql id="Base_Column_List">
    eeso.equipment_scrap_order_id,
    eeso.equipment_scrap_order_code,
    eeso.apply_user_id,
    eeso.apply_dept_id,
    eeso.apply_time,
    eeso.use_user_id,
    eeso.order_status,
    eeso.use_dept_id,
    eeso.`status`,
    eeso.remark,
    eeso.org_id,
    eeso.create_user_id,
    eeso.create_time,
    eeso.modified_user_id,
    eeso.modified_time,
    eeso.option1,
    eeso.option2,
    eeso.option3
  </sql>

  <select id="findList" parameterType="map" resultMap="BaseResultMapDto">
    select <include refid="Base_Column_List"></include>,
    bd.dept_name as apply_dept_name,
    d.dept_name as use_dept_name,
    su.user_name as apply_user_name,
    sus.user_name as use_user_name,
    u.user_name as create_user_name,
    s.user_name as modified_user_name,
    bo.organization_name
    from eam_equipment_scrap_order eeso
    left join base_dept d on eeso.use_dept_id=d.dept_id
    left join base_dept bd on eeso.apply_dept_id=bd.dept_id
    left join sys_user su on eeso.apply_user_id=su.user_id
    left join sys_user sus on eeso.use_user_id=sus.user_id
    left join sys_user u on eeso.create_user_id=u.user_id
    left join sys_user s on eeso.modified_user_id=s.user_id
    left join base_organization bo ON eeso.org_id = bo.organization_id
    <where>
      <if test="equipmentScrapOrderCode != null and equipmentScrapOrderCode!=''">
        and eeso.equipment_scrap_order_code like CONCAT('%', #{equipmentScrapOrderCode}, '%')
      </if>
      <if test="applyDeptName != null and applyDeptName!=''">
        and bd.dept_name like CONCAT('%', #{applyDeptName}, '%')
      </if>
      <if test="useDeptName != null and useDeptName!=''">
        and d.dept_name like CONCAT('%', #{useDeptName}, '%')
      </if>
      <if test="applyUserName != null and applyUserName!=''">
        and su.user_name like CONCAT('%', #{applyUserName}, '%')
      </if>
      <if test="useUserName != null and useUserName!=''">
        and sus.user_name like CONCAT('%', #{useUserName}, '%')
      </if>
      <if test="orderStatus!=null">
        and eeso.order_status = #{orderStatus}
      </if>
      <if test="applyTime!= null and applyTime!= ''">
        and date_format(eeso.apply_time, '%Y-%m-%d') = #{applyTime}
      </if>
      <if test="startTime!= null and startTime!= '' and endTime!= null and endTime!= ''">
        and date_format(eeso.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
      </if>
      <if test="status!=null">
        and eeso.status = #{status}
      </if>
      <if test="orgId!=null">
        and eeso.org_id=#{orgId}
      </if>
      <!-- 全表单查询 -->
      <if test="query != null">
        and #FULL_FROM_QUERY
      </if>
    </where>
    order by eeso.create_time desc
  </select>
</mapper>
