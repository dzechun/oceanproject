    <result column="material_desc" jdbcType="VARCHAR" property="materialDesc"/>
    <result column="material_version" jdbcType="VARCHAR" property="materialVersion"/>
  </resultMap>

  <sql id="Base_Column_List">
    eheml.ht_equipment_material_list_id,
    eheml.equipment_material_list_id,
    eheml.equipment_material_id,
    eheml.material_id,
    eheml.`status`,
    eheml.remark,
    eheml.org_id,
    eheml.create_user_id,
    eheml.create_time,
    eheml.modified_user_id,
    eheml.modified_time,
    eheml.option1,
    eheml.option2,
    eheml.option3
  </sql>

  <select id="findHtList" parameterType="map" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"></include>,
    bm.material_code,bm.material_name,bm.material_desc,bm.material_version,
    u.user_name as create_user_name,
    s.user_name as modified_user_name,
    bo.organization_name
    from fantech_imes_v2.eam_ht_equipment_material_list eheml
    left join fantech_imes_v2.base_material bm ON eheml.material_id = bm.material_id
    left join ocean_v2.sys_user u on eheml.create_user_id=u.user_id
    left join ocean_v2.sys_user s on eheml.modified_user_id=s.user_id
    left join fantech_imes_v2.base_organization bo ON eheml.org_id = bo.organization_id
    <where>
      <if test="equipmentMaterialId != null">
        and eheml.equipment_material_id =  #{equipmentMaterialId}
      </if>
      <if test="startTime!= null and startTime!= '' and endTime!= null and endTime!= ''">
        and date_format(eheml.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
      </if>
      <if test="status!=null">
        and eheml.status = #{status}
      </if>
      <if test="orgId!=null">
        and eheml.org_id=#{orgId}
      </if>
    </where>
    order by eheml.create_time desc
  </select>
