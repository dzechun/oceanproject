<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantechs.provider.eam.mapper.EamWorkInstructionMapper">
  <resultMap id="BaseResultMap" type="com.fantechs.common.base.general.entity.eam.EamWorkInstruction">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="work_instruction_id" jdbcType="BIGINT" property="workInstructionId" />
    <result column="work_instruction_code" jdbcType="VARCHAR" property="workInstructionCode" />
    <result column="work_instruction_name" jdbcType="VARCHAR" property="workInstructionName" />
    <result column="work_instruction_ver" jdbcType="VARCHAR" property="workInstructionVer" />
    <result column="process_id" jdbcType="BIGINT" property="processId" />
    <result column="material_id" jdbcType="BIGINT" property="materialId" />
    <result column="secrecy_grade" jdbcType="TINYINT" property="secrecyGrade" />
    <result column="wi_status" jdbcType="TINYINT" property="wiStatus" />
    <result column="status" jdbcType="TINYINT" property="status" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
    <result column="org_id" jdbcType="BIGINT" property="orgId" />
    <result column="create_user_id" jdbcType="BIGINT" property="createUserId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId" />
    <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime" />
    <result column="option1" jdbcType="VARCHAR" property="option1" />
    <result column="option2" jdbcType="VARCHAR" property="option2" />
    <result column="option3" jdbcType="VARCHAR" property="option3" />
    <result column="manufacture_procedure" jdbcType="LONGVARCHAR" property="manufactureProcedure" />
    <result column="process_req_and_announcements" jdbcType="LONGVARCHAR" property="processReqAndAnnouncements" />
  </resultMap>

  <resultMap id="BaseResultMapDto" extends="BaseResultMap"
             type="com.fantechs.common.base.general.dto.eam.EamWorkInstructionDto">
    <result column="material_code" jdbcType="VARCHAR" property="materialCode"/>
    <result column="product_model_name" jdbcType="VARCHAR" property="productModelName"/>
    <result column="product_model_code" jdbcType="VARCHAR" property="productModelCode"/>
    <result column="process_name" jdbcType="VARCHAR" property="processName"/>
    <result column="process_code" jdbcType="VARCHAR" property="processCode"/>
    <result column="create_user_name" jdbcType="VARCHAR" property="createUserName"/>
    <result column="modified_user_name" jdbcType="VARCHAR" property="modifiedUserName"/>
    <result column="specifications" jdbcType="VARCHAR" property="specifications"/>
    <result column="pro_name" jdbcType="VARCHAR" property="proName"/>

    <collection property="eamWiBoms" ofType="com.fantechs.common.base.general.entity.eam.EamWiBom"
            column="{workInstructionId=work_instruction_id}" select="com.fantechs.provider.eam.mapper.EamWiBomMapper.findList">
    </collection>
    <collection property="eamWiFTAndInspectionTools" ofType="com.fantechs.common.base.general.entity.eam.EamWiFTAndInspectionTool"
            column="{workInstructionId=work_instruction_id}" select="com.fantechs.provider.eam.mapper.EamWiFTAndInspectionToolMapper.findList">
    </collection>
    <collection property="eamWiQualityStandardss" ofType="com.fantechs.common.base.general.entity.eam.EamWiQualityStandards"
            column="{workInstructionId=work_instruction_id}" select="com.fantechs.provider.eam.mapper.EamWiQualityStandardsMapper.findList">
    </collection>
    <collection property="eamWiFiles" ofType="com.fantechs.common.base.general.entity.eam.EamWiFile"
            column="{workInstructionId=work_instruction_id}" select="com.fantechs.provider.eam.mapper.EamWiFileMapper.findList">
    </collection>
  </resultMap>
  <sql id="BaseColumnList">
        ewi.work_instruction_id,
        ewi.work_instruction_code,
        ewi.work_instruction_name,
        ewi.work_instruction_ver,
        ewi.process_id,
        ewi.material_id,
        ewi.secrecy_grade,
        ewi.wi_status,
        ewi.manufacture_procedure,
        ewi.process_req_and_announcements,
        ewi.status,
        ewi.remark,
        ewi.org_id,
        ewi.create_user_id,
        ewi.create_time,
        ewi.modified_user_id,
        ewi.modified_time,
        ewi.option1,
        ewi.option2,
        ewi.option3
    </sql>

  <select id="findList" resultMap="BaseResultMapDto">

    SELECT<include refid="BaseColumnList"/>,
    bm.material_code as material_code,spm.product_model_code as product_model_code,spm.product_model_name as product_model_name,
    sp.process_name as process_name,sp.process_code as process_code,su.user_name AS create_user_name,
    CONCAT(bt.length,',',bt.width,',',bt.height) as specifications,bpl.pro_name as pro_name,
    sus.user_name AS modified_user_name,bo.organization_name AS organization_name
    FROM eam_work_instruction ewi
    LEFT JOIN base_material bm ON ewi.material_id = bm.material_id
    LEFT JOIN base_material_tab bt ON bm.material_id = bt.material_id
    LEFT JOIN base_product_model spm ON bt.product_model_id = spm.product_model_id
    LEFT JOIN base_process sp ON ewi.process_id = sp.process_id
    LEFT JOIN ocean_v2.sys_user su ON ewi.create_user_id = su.user_id
    LEFT JOIN ocean_v2.sys_user sus ON ewi.modified_user_id = sus.user_id
    LEFT JOIN base_organization bo ON ewi.org_id = bo.organization_id
    LEFT JOIN base_pro_line bpl ON bpl.pro_line_id = #{proLineId}
      <where>
      <if test="orgId!=null and orgId!=''">
        and ewi.org_id = #{orgId}
      </if>
        <if test="workInstructionName!=null and workInstructionName!=''">
            and ewi.work_instruction_name = #{workInstructionName}
        </if>
        <if test="workInstructionCode!=null and workInstructionCode!=''">
            and ewi.work_instruction_code = #{workInstructionCode}
        </if>
        <if test="materialCode!=null and materialCode!=''">
            and bm.material_code = #{materialCode}
        </if>
        <if test="materialId!=null and materialId!=''">
            and ewi.material_id = #{materialId}
        </if>
        <if test="processId!=null and processId!=''">
            and ewi.process_id = #{processId}
        </if>
        <if test="workInstructionId!=null and workInstructionId!=''">
            and ewi.work_instruction_id = #{workInstructionId}
        </if>
    </where>
  </select>
</mapper>