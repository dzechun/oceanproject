<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantechs.provider.eam.mapper.EamHtEquipmentParamMapper">
  <resultMap id="BaseResultMap" type="com.fantechs.common.base.general.entity.eam.history.EamHtEquipmentParam">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="ht_equipment_param_id" jdbcType="BIGINT" property="htEquipmentParamId" />
    <result column="equipment_param_id" jdbcType="BIGINT" property="equipmentParamId" />
    <result column="equipment_category_id" jdbcType="BIGINT" property="equipmentCategoryId" />
    <result column="status" jdbcType="TINYINT" property="status" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
    <result column="org_id" jdbcType="BIGINT" property="orgId" />
    <result column="create_user_id" jdbcType="BIGINT" property="createUserId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId" />
    <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime" />
    <result column="option1" jdbcType="VARCHAR" property="option1" />
    <result column="option2" jdbcType="VARCHAR" property="option2" />
    <result column="option3" jdbcType="VARCHAR" property="option3" />

    <result column="create_user_name" jdbcType="VARCHAR" property="createUserName"/>
    <result column="modified_user_name" jdbcType="VARCHAR" property="modifiedUserName"/>
    <result column="organization_name" jdbcType="VARCHAR" property="organizationName"/>
    <result column="equipment_category_name" jdbcType="VARCHAR" property="equipmentCategoryName" />
  </resultMap>

  <sql id="Base_Column_List">
    ehep.ht_equipment_param_id,
    ehep.equipment_param_id,
    ehep.equipment_category_id,
    ehep.`status`,
    ehep.remark,
    ehep.org_id,
    ehep.create_user_id,
    ehep.create_time,
    ehep.modified_user_id,
    ehep.modified_time,
    ehep.option1,
    ehep.option2,
    ehep.option3
  </sql>

  <select id="findHtList" parameterType="map" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"></include>,
    eec.equipment_category_name,
    u.user_name as create_user_name,
    s.user_name as modified_user_name,
    bo.organization_name
    from eam_ht_equipment_param ehep
    left join eam_equipment_category eec on ehep.equipment_category_id=eec.equipment_category_id
    left join sys_user u on ehep.create_user_id=u.user_id
    left join sys_user s on ehep.modified_user_id=s.user_id
    left join base_organization bo ON ehep.org_id = bo.organization_id
    <where>
      <if test="equipmentCategoryName != null and equipmentCategoryName!=''">
        and eec.equipment_category_name like CONCAT('%', #{equipmentCategoryName}, '%')
      </if>
      <if test="startTime!= null and startTime!= '' and endTime!= null and endTime!= ''">
        and date_format(ehep.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
      </if>
      <if test="status!=null">
        and ehep.status = #{status}
      </if>
      <if test="orgId!=null">
        and ehep.org_id=#{orgId}
      </if>
    </where>
    order by ehep.create_time desc
  </select>
</mapper>
