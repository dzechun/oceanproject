    left join fantech_imes_v2.base_organization bo ON ehja.org_id = bo.organization_id
    <where>
      <if test="jigId!=null">
        and ehja.jig_id = #{jigId}
      </if>
      <if test="orgId!=null">
        and ehja.org_id=#{orgId}
      </if>
    </where>
    order by ehja.create_time desc
  </select>
