    -->
    <id column="equipment_maintain_project_id" jdbcType="BIGINT" property="equipmentMaintainProjectId" />
    <result column="equipment_maintain_project_code" jdbcType="VARCHAR" property="equipmentMaintainProjectCode" />
    <result column="equipment_maintain_project_name" jdbcType="VARCHAR" property="equipmentMaintainProjectName" />
