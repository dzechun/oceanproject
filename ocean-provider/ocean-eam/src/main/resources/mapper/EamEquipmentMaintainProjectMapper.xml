  </resultMap>

  <resultMap id="BaseResultMapDto" extends="BaseResultMap" type="com.fantechs.common.base.general.dto.eam.EamEquipmentMaintainProjectDto">
    <result column="equipment_category_name" jdbcType="VARCHAR" property="equipmentCategoryName"/>
    <result column="create_user_name" jdbcType="VARCHAR" property="createUserName"/>
    <result column="modified_user_name" jdbcType="VARCHAR" property="modifiedUserName"/>
    <result column="organization_name" jdbcType="VARCHAR" property="organizationName"/>
    <collection property="items" ofType="com.fantechs.common.base.general.dto.eam.EamEquipmentMaintainProjectItemDto"
                column="{equipmentMaintainProjectId=equipment_maintain_project_id}" select="com.fantechs.provider.eam.mapper.EamEquipmentMaintainProjectItemMapper.findList">
    </collection>
  </resultMap>

  <sql id="Base_Column_List">
    eemp.equipment_maintain_project_id,
    eemp.equipment_maintain_project_code,
    eemp.equipment_maintain_project_name,
    eemp.equipment_maintain_project_desc,
    eemp.equipment_category_id,
    eemp.`status`,
    eemp.remark,
    eemp.org_id,
    eemp.create_user_id,
    eemp.create_time,
    eemp.modified_user_id,
    eemp.modified_time,
    eemp.option1,
    eemp.option2,
    eemp.option3
  </sql>

  <select id="findList" parameterType="map" resultMap="BaseResultMapDto">
    select <include refid="Base_Column_List"></include>,
    eec.equipment_category_name,
    u.user_name as create_user_name,
    s.user_name as modified_user_name,
    bo.organization_name
    from eam_equipment_maintain_project eemp
    LEFT JOIN eam_equipment_category eec ON eemp.equipment_category_id = eec.equipment_category_id
    left join sys_user u on eemp.create_user_id=u.user_id
    left join sys_user s on eemp.modified_user_id=s.user_id
    left join base_organization bo ON eemp.org_id = bo.organization_id
    <where>
      <if test="equipmentCategoryId != null">
        and eemp.equipment_category_id = #{equipmentCategoryId}
      </if>
      <if test="equipmentMaintainProjectCode != null and equipmentMaintainProjectCode!=''">
        and eemp.equipment_maintain_project_code like CONCAT('%', #{equipmentMaintainProjectCode}, '%')
      </if>
      <if test="equipmentMaintainProjectDesc != null and equipmentMaintainProjectDesc!=''">
        and eemp.equipment_maintain_project_desc like CONCAT('%', #{equipmentMaintainProjectDesc}, '%')
      </if>
      <if test="equipmentMaintainProjectName != null and equipmentMaintainProjectName!=''">
        and eemp.equipment_maintain_project_name like CONCAT('%', #{equipmentMaintainProjectName}, '%')
      </if>
      <if test="equipmentCategoryName != null and equipmentCategoryName!=''">
        and eec.equipment_category_name like CONCAT('%', #{equipmentCategoryName}, '%')
      </if>
      <if test="status!=null">
        and eemp.status = #{status}
      </if>
      <if test="orgId!=null">
        and eemp.org_id=#{orgId}
      </if>
    </where>
    order by eemp.create_time desc
  </select>
