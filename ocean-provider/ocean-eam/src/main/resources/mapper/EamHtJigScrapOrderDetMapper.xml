    bo.organization_name
    from eam_ht_jig_scrap_order_det ehjsod
    left join eam_jig_barcode ejb on ehjsod.jig_barcode_id=ejb.jig_barcode_id
    left join eam_jig_standing_book ejsb on ehjsod.jig_barcode_id=ejsb.jig_barcode_id
    left join eam_jig ej on ejb.jig_id=ej.jig_id
    left join eam_jig_category ejc on ej.jig_category_id=ejc.jig_category_id
    left join sys_user u on ehjsod.create_user_id=u.user_id
    left join sys_user s on ehjsod.modified_user_id=s.user_id
    left join base_organization bo ON ehjsod.org_id = bo.organization_id
    <where>
