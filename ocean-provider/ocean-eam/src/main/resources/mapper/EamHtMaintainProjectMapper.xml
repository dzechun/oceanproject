    -->
    <id column="ht_maintain_project_id" jdbcType="BIGINT" property="htMaintainProjectId" />
    <result column="maintain_project_id" jdbcType="BIGINT" property="maintainProjectId" />
    <result column="maintain_project_code" jdbcType="VARCHAR" property="maintainProjectCode" />
    <result column="maintain_project_name" jdbcType="VARCHAR" property="maintainProjectName" />
    <result column="maintain_project_content" jdbcType="VARCHAR" property="maintainProjectContent" />
    <result column="status" jdbcType="TINYINT" property="status" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
    <result column="org_id" jdbcType="BIGINT" property="orgId" />
    <result column="create_user_id" jdbcType="BIGINT" property="createUserId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId" />
    <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime" />
    <result column="option1" jdbcType="VARCHAR" property="option1" />
    <result column="option2" jdbcType="VARCHAR" property="option2" />
    <result column="option3" jdbcType="VARCHAR" property="option3" />

    <result column="create_user_name" jdbcType="VARCHAR" property="createUserName"/>
    <result column="modified_user_name" jdbcType="VARCHAR" property="modifiedUserName"/>
    <result column="organization_name" jdbcType="VARCHAR" property="organizationName"/>
  </resultMap>

  <sql id="Base_Column_List">
    ehmp.ht_maintain_project_id,
    ehmp.maintain_project_id,
    ehmp.maintain_project_code,
    ehmp.maintain_project_name,
    ehmp.maintain_project_content,
    ehmp.`status`,
    ehmp.remark,
    ehmp.org_id,
    ehmp.create_user_id,
    ehmp.create_time,
    ehmp.modified_user_id,
    ehmp.modified_time,
    ehmp.option1,
    ehmp.option2,
    ehmp.option3
  </sql>

  <select id="findHtList" parameterType="map" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"></include>,
    u.user_name as create_user_name,
    s.user_name as modified_user_name,
    bo.organization_name
    from fantech_imes_v2.eam_ht_maintain_project ehmp
    left join ocean_v2.sys_user u on ehmp.create_user_id=u.user_id
    left join ocean_v2.sys_user s on ehmp.modified_user_id=s.user_id
    left join fantech_imes_v2.base_organization bo ON ehmp.org_id = bo.organization_id
    <where>
      <if test="maintainProjectCode != null and maintainProjectCode!=''">
        and ehmp.maintain_project_code like CONCAT('%', #{maintainProjectCode}, '%')
      </if>
      <if test="maintainProjectName != null and maintainProjectName!=''">
        and ehmp.maintain_project_name like CONCAT('%', #{maintainProjectName}, '%')
      </if>
      <if test="startTime!= null and startTime!= '' and endTime!= null and endTime!= ''">
        and date_format(ehmp.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
      </if>
      <if test="status!=null">
        and ehmp.status = #{status}
      </if>
      <if test="orgId!=null">
        and ehmp.org_id=#{orgId}
      </if>
    </where>
    order by ehmp.create_time desc
  </select>
