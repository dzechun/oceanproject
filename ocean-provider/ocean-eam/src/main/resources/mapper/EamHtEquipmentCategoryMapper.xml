<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantechs.provider.eam.mapper.EamHtEquipmentCategoryMapper">
  <resultMap id="BaseResultMap" type="com.fantechs.common.base.general.entity.eam.history.EamHtEquipmentCategory">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="ht_equipment_category_id" jdbcType="BIGINT" property="htEquipmentCategoryId" />
    <result column="equipment_category_id" jdbcType="BIGINT" property="equipmentCategoryId" />
    <result column="equipment_category_code" jdbcType="VARCHAR" property="equipmentCategoryCode" />
    <result column="equipment_category_desc" jdbcType="VARCHAR" property="equipmentCategoryDesc" />
    <result column="status" jdbcType="TINYINT" property="status" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
    <result column="org_id" jdbcType="BIGINT" property="orgId" />
    <result column="create_user_id" jdbcType="BIGINT" property="createUserId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId" />
    <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime" />
    <result column="option1" jdbcType="VARCHAR" property="option1" />
    <result column="option2" jdbcType="VARCHAR" property="option2" />
    <result column="option3" jdbcType="VARCHAR" property="option3" />

    <result column="create_user_name" jdbcType="VARCHAR" property="createUserName"/>
    <result column="modified_user_name" jdbcType="VARCHAR" property="modifiedUserName"/>
    <result column="organization_name" jdbcType="VARCHAR" property="organizationName"/>
  </resultMap>

  <sql id="Base_Column_List">
    ehec.ht_equipment_category_id,
    ehec.equipment_category_id,
    ehec.equipment_category_code,
    ehec.equipment_category_desc,
    ehec.`status`,
    ehec.remark,
    ehec.org_id,
    ehec.create_user_id,
    ehec.create_time,
    ehec.modified_user_id,
    ehec.modified_time,
    ehec.option1,
    ehec.option2,
    ehec.option3
  </sql>

  <select id="findHtList" parameterType="map" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"></include>,
    u.user_name as create_user_name,
    s.user_name as modified_user_name,
    bo.organization_name
    from fantech_imes_v2.eam_ht_equipment_category ehec
    left join ocean_v2.sys_user u on ehec.create_user_id=u.user_id
    left join ocean_v2.sys_user s on ehec.modified_user_id=s.user_id
    left join fantech_imes_v2.base_organization bo ON ehec.org_id = bo.organization_id
    <where>
      <if test="equipmentCategoryCode != null and equipmentCategoryCode!=''">
        and ehec.equipment_category_code like CONCAT('%', #{equipmentCategoryCode}, '%')
      </if>
      <if test="equipmentCategoryDesc != null and equipmentCategoryDesc!=''">
        and ehec.equipment_category_desc like CONCAT('%', #{equipmentCategoryDesc}, '%')
      </if>
      <if test="startTime!= null and startTime!= '' and endTime!= null and endTime!= ''">
        and date_format(ehec.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
      </if>
      <if test="status!=null">
        and ehec.status = #{status}
      </if>
      <if test="orgId!=null">
        and ehec.org_id=#{orgId}
      </if>
    </where>
    order by ehec.create_time desc
  </select>
</mapper>