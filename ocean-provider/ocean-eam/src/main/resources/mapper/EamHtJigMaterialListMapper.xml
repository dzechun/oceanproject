<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantechs.provider.eam.mapper.EamHtJigMaterialListMapper">
  <resultMap id="BaseResultMap" type="com.fantechs.common.base.general.entity.eam.history.EamHtJigMaterialList">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="ht_jig_material_list_id" jdbcType="BIGINT" property="htJigMaterialListId" />
    <result column="jig_material_list_id" jdbcType="BIGINT" property="jigMaterialListId" />
    <result column="jig_material_id" jdbcType="BIGINT" property="jigMaterialId" />
    <result column="material_id" jdbcType="BIGINT" property="materialId" />
    <result column="usage_qty" jdbcType="INTEGER" property="usageQty" />
    <result column="status" jdbcType="TINYINT" property="status" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
    <result column="org_id" jdbcType="BIGINT" property="orgId" />
    <result column="create_user_id" jdbcType="BIGINT" property="createUserId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId" />
    <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime" />
    <result column="option1" jdbcType="VARCHAR" property="option1" />
    <result column="option2" jdbcType="VARCHAR" property="option2" />
    <result column="option3" jdbcType="VARCHAR" property="option3" />

    <result column="create_user_name" jdbcType="VARCHAR" property="createUserName"/>
    <result column="modified_user_name" jdbcType="VARCHAR" property="modifiedUserName"/>
    <result column="organization_name" jdbcType="VARCHAR" property="organizationName"/>
    <result column="material_code" jdbcType="VARCHAR" property="materialCode"/>
    <result column="material_name" jdbcType="VARCHAR" property="materialName"/>
    <result column="material_desc" jdbcType="VARCHAR" property="materialDesc"/>
    <result column="material_version" jdbcType="VARCHAR" property="materialVersion"/>
  </resultMap>

  <sql id="Base_Column_List">
    ehjml.ht_jig_material_list_id,
    ehjml.jig_material_list_id,
    ehjml.jig_material_id,
    ehjml.material_id,
    ehjml.usage_qty,
    ehjml.`status`,
    ehjml.remark,
    ehjml.org_id,
    ehjml.create_user_id,
    ehjml.create_time,
    ehjml.modified_user_id,
    ehjml.modified_time,
    ehjml.option1,
    ehjml.option2,
    ehjml.option3
  </sql>

  <select id="findHtList" parameterType="map" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"></include>,
    bm.material_code,bm.material_name,bm.material_desc,bm.material_version,
    u.user_name as create_user_name,
    s.user_name as modified_user_name,
    bo.organization_name
    from eam_ht_jig_material_list ehjml
    left join base_material bm on ehjml.material_id=bm.material_id
    left join sys_user u on ehjml.create_user_id=u.user_id
    left join sys_user s on ehjml.modified_user_id=s.user_id
    left join base_organization bo ON ehjml.org_id = bo.organization_id
    <where>
      <if test="jigMaterialId!=null">
        and ehjml.jig_material_id = #{jigMaterialId}
      </if>
      <if test="startTime!= null and startTime!= '' and endTime!= null and endTime!= ''">
        and date_format(ehjml.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
      </if>
      <if test="status!=null">
        and ehjml.status = #{status}
      </if>
      <if test="orgId!=null">
        and ehjml.org_id=#{orgId}
      </if>
    </where>
    order by ehjml.create_time desc
  </select>
</mapper>
