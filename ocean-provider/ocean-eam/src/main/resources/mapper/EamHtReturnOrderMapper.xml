<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantechs.provider.eam.mapper.EamHtReturnOrderMapper">
  <resultMap id="BaseResultMap" type="com.fantechs.common.base.general.entity.eam.history.EamHtReturnOrder">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="ht_return_order_id" jdbcType="BIGINT" property="htReturnOrderId" />
    <result column="return_order_id" jdbcType="BIGINT" property="returnOrderId" />
    <result column="return_order_code" jdbcType="VARCHAR" property="returnOrderCode" />
    <result column="return_user_id" jdbcType="BIGINT" property="returnUserId" />
    <result column="dept_id" jdbcType="BIGINT" property="deptId" />
    <result column="return_time" jdbcType="TIMESTAMP" property="returnTime" />
    <result column="status" jdbcType="TINYINT" property="status" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
    <result column="org_id" jdbcType="BIGINT" property="orgId" />
    <result column="create_user_id" jdbcType="BIGINT" property="createUserId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId" />
    <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime" />
    <result column="option1" jdbcType="VARCHAR" property="option1" />
    <result column="option2" jdbcType="VARCHAR" property="option2" />
    <result column="option3" jdbcType="VARCHAR" property="option3" />

    <result column="create_user_name" jdbcType="VARCHAR" property="createUserName"/>
    <result column="modified_user_name" jdbcType="VARCHAR" property="modifiedUserName"/>
    <result column="organization_name" jdbcType="VARCHAR" property="organizationName"/>
  </resultMap>

  <sql id="Base_Column_List">
    ehro.ht_return_order_id,
    ehro.return_order_id,
    ehro.return_order_code,
    ehro.return_user_id,
    ehro.dept_id,
    ehro.return_time,
    ehro.`status`,
    ehro.remark,
    ehro.org_id,
    ehro.create_user_id,
    ehro.create_time,
    ehro.modified_user_id,
    ehro.modified_time,
    ehro.option1,
    ehro.option2,
    ehro.option3
  </sql>

  <select id="findHtList" parameterType="map" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"></include>,
    u.user_name as create_user_name,
    s.user_name as modified_user_name,
    bo.organization_name
    from fantech_imes_v2.eam_ht_return_order ehro
    left join ocean_v2.sys_user u on ehro.create_user_id=u.user_id
    left join ocean_v2.sys_user s on ehro.modified_user_id=s.user_id
    left join fantech_imes_v2.base_organization bo ON ehro.org_id = bo.organization_id
    <where>
      <if test="startTime!= null and startTime!= '' and endTime!= null and endTime!= ''">
        and date_format(ehro.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
      </if>
      <if test="status!=null">
        and ehro.status = #{status}
      </if>
      <if test="orgId!=null">
        and ehro.org_id=#{orgId}
      </if>
    </where>
    order by ehro.create_time desc
  </select>
</mapper>