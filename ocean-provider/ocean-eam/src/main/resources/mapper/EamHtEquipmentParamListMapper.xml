<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantechs.provider.eam.mapper.EamHtEquipmentParamListMapper">
  <resultMap id="BaseResultMap" type="com.fantechs.common.base.general.entity.eam.history.EamHtEquipmentParamList">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="ht_equipment_param_list_id" jdbcType="BIGINT" property="htEquipmentParamListId" />
    <result column="equipment_param_list_id" jdbcType="BIGINT" property="equipmentParamListId" />
    <result column="equipment_param_id" jdbcType="BIGINT" property="equipmentParamId" />
    <result column="parameter_name" jdbcType="VARCHAR" property="parameterName" />
    <result column="unit_name" jdbcType="VARCHAR" property="unitName" />
    <result column="reference_value" jdbcType="VARCHAR" property="referenceValue" />
    <result column="min_value" jdbcType="DECIMAL" property="minValue" />
    <result column="max_value" jdbcType="DECIMAL" property="maxValue" />
    <result column="address_loca" jdbcType="INTEGER" property="addressLoca" />
    <result column="status" jdbcType="TINYINT" property="status" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
    <result column="org_id" jdbcType="BIGINT" property="orgId" />
    <result column="create_user_id" jdbcType="BIGINT" property="createUserId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId" />
    <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime" />
    <result column="option1" jdbcType="VARCHAR" property="option1" />
    <result column="option2" jdbcType="VARCHAR" property="option2" />
    <result column="option3" jdbcType="VARCHAR" property="option3" />

    <result column="create_user_name" jdbcType="VARCHAR" property="createUserName"/>
    <result column="modified_user_name" jdbcType="VARCHAR" property="modifiedUserName"/>
    <result column="organization_name" jdbcType="VARCHAR" property="organizationName"/>
  </resultMap>

  <sql id="Base_Column_List">
    ehepl.ht_equipment_material_list_id,
    ehepl.equipment_param_list_id,
    ehepl.equipment_param_id,
    ehepl.parameter_name,
    ehepl.unit_name,
    ehepl.reference_value,
    ehepl.min_value,
    ehepl.max_value,
    ehepl.address_loca,
    ehepl.`status`,
    ehepl.remark,
    ehepl.org_id,
    ehepl.create_user_id,
    ehepl.create_time,
    ehepl.modified_user_id,
    ehepl.modified_time,
    ehepl.option1,
    ehepl.option2,
    ehepl.option3
  </sql>

  <select id="findHtList" parameterType="map" resultMap="BaseResultMap">
    select <include refid="Base_Column_List"></include>,
    u.user_name as create_user_name,
    s.user_name as modified_user_name,
    bo.organization_name
    from fantech_imes_v2.eam_ht_equipment_material_list ehepl
    left join ocean_v2.sys_user u on ehepl.create_user_id=u.user_id
    left join ocean_v2.sys_user s on ehepl.modified_user_id=s.user_id
    left join fantech_imes_v2.base_organization bo ON ehepl.org_id = bo.organization_id
    <where>
      <if test="equipmentParamId != null">
        and ehepl.equipment_param_id =  #{equipmentParamId}
      </if>
      <if test="startTime!= null and startTime!= '' and endTime!= null and endTime!= ''">
        and date_format(ehepl.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
      </if>
      <if test="status!=null">
        and ehepl.status = #{status}
      </if>
      <if test="orgId!=null">
        and ehepl.org_id=#{orgId}
      </if>
    </where>
    order by ehepl.create_time desc
  </select>
</mapper>