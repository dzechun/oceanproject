<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantechs.provider.eam.mapper.EamIssueAttachmentMapper">
  <resultMap id="BaseResultMap" type="com.fantechs.common.base.general.entity.eam.EamIssueAttachment">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="issue_attachment_id" jdbcType="BIGINT" property="issueAttachmentId" />
    <result column="issue_id" jdbcType="BIGINT" property="issueId" />
    <result column="file_org_name" jdbcType="VARCHAR" property="fileOrgName" />
    <result column="file_name" jdbcType="VARCHAR" property="fileName" />
    <result column="store_path" jdbcType="VARCHAR" property="storePath" />
    <result column="access_url" jdbcType="VARCHAR" property="accessUrl" />
    <result column="status" jdbcType="TINYINT" property="status" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
    <result column="org_id" jdbcType="BIGINT" property="orgId" />
    <result column="create_user_id" jdbcType="BIGINT" property="createUserId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId" />
    <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime" />
    <result column="option1" jdbcType="VARCHAR" property="option1" />
    <result column="option2" jdbcType="VARCHAR" property="option2" />
    <result column="option3" jdbcType="VARCHAR" property="option3" />
  </resultMap>

  <resultMap id="BaseResultMapDto" extends="BaseResultMap" type="com.fantechs.common.base.general.dto.eam.EamIssueAttachmentDto">
    <result column="create_user_name" jdbcType="VARCHAR" property="createUserName"/>
    <result column="modified_user_name" jdbcType="VARCHAR" property="modifiedUserName"/>
    <result column="organization_name" jdbcType="VARCHAR" property="organizationName"/>
  </resultMap>

  <sql id="Base_Column_List">
    eia.issue_attachment_id,
    eia.issue_id,
    eia.file_org_name,
    eia.file_name,
    eia.store_path,
    eia.access_url,
    eia.`status`,
    eia.remark,
    eia.org_id,
    eia.create_user_id,
    eia.create_time,
    eia.modified_user_id,
    eia.modified_time,
    eia.option1,
    eia.option2,
    eia.option3
  </sql>

  <select id="findList" parameterType="map" resultMap="BaseResultMapDto">
    select <include refid="Base_Column_List"></include>,
    u.user_name as create_user_name,
    s.user_name as modified_user_name,
    bo.organization_name
    from fantech_imes_v2.eam_issue_attachment eia
    left join ocean_v2.sys_user u on eia.create_user_id=u.user_id
    left join ocean_v2.sys_user s on eia.modified_user_id=s.user_id
    left join fantech_imes_v2.base_organization bo ON eia.org_id = bo.organization_id
    <where>
      <if test="issueId!=null">
        and eia.issue_id = #{issueId}
      </if>
      <if test="startTime!= null and startTime!= '' and endTime!= null and endTime!= ''">
        and date_format(eia.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
      </if>
      <if test="status!=null">
        and eia.status = #{status}
      </if>
      <if test="orgId!=null">
        and eia.org_id=#{orgId}
      </if>
    </where>
    order by eia.create_time desc
  </select>
</mapper>