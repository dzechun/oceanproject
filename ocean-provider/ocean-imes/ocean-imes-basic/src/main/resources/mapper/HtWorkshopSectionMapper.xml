  </resultMap>
  <select id="findList" parameterType="com.fantechs.common.base.entity.basic.search.SearchWorkshopSection" resultMap="BaseResultMap">
    select wts.ht_section_id,wts.section_id, wts.section_code, wts.section_name, wts.section_desc,
    wts.status, wts.create_user_id,u.user_name as createUserName,wts.create_time,wts.modified_user_id,
    s.user_name as modifiedUserName, wts.modified_time,wts.is_delete
    from smt_ht_workshop_section wts
    left join smt_user u on wts.create_user_id=u.user_id
    left join smt_user s on wts.modified_user_id=s.user_id
    <where>
      1=1
      <if test="startDate !=null and startDate !='' and endDate !=null and endDate !=''">
        AND date_format(wts.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
      </if>
      <if test="sectionCode!=null and sectionCode!=''">
        and wts.section_code like CONCAT('%', #{sectionCode}, '%')
      </if>
      <if test="sectionName!=null and sectionName!=''">
        and wts.sectionName like CONCAT('%', #{sectionName}, '%')
      </if>
      <if test="sectionDesc!=null and sectionDesc!=''">
        and wts.sectionDesc like CONCAT('%', #{sectionDesc}, '%')
      </if>
    </where>
  </select>
