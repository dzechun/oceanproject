<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantechs.provider.imes.basic.mapper.SmtWorkshopSectionMapper">
    <resultMap id="BaseResultMap" type="com.fantechs.common.base.entity.basic.SmtWorkshopSection">
        <id column="section_id" jdbcType="BIGINT" property="sectionId"/>
        <result column="section_code" jdbcType="VARCHAR" property="sectionCode"/>
        <result column="section_name" jdbcType="VARCHAR" property="sectionName"/>
        <result column="section_desc" jdbcType="VARCHAR" property="sectionDesc"/>
        <result column="status" jdbcType="TINYINT" property="status"/>
        <result column="organization_id" jdbcType="BIGINT" property="organizationId"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="create_user_id" jdbcType="BIGINT" property="createUserId"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId"/>
        <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime"/>
        <result column="is_delete" jdbcType="TINYINT" property="isDelete"/>
        <result column="option1" jdbcType="VARCHAR" property="option1"/>
        <result column="option2" jdbcType="VARCHAR" property="option2"/>
        <result column="option3" jdbcType="VARCHAR" property="option3"/>

        <result column="organization_name" jdbcType="VARCHAR" property="organizationName"/>
    </resultMap>

    <sql id="Base_Column_List">
        sws.section_id,
	sws.section_code,
	sws.section_name,
	sws.section_desc,
	sws.`status`,
	sws.remark,
	sws.organization_id,
	sws.create_user_id,
	sws.create_time,
	sws.modified_user_id,
	sws.modified_time,
	sws.is_delete,
	sws.option1,
	sws.option2,
	sws.option3
    </sql>

    <select id="findList" parameterType="com.fantechs.common.base.entity.basic.search.SearchSmtWorkshopSection"
            resultMap="BaseResultMap">
        select <include refid="Base_Column_List"></include>,
        u.user_name as createUserName, s.user_name as modifiedUserName,
        bo.organization_name
        from fantech_imes.smt_workshop_section sws
        left join ocean.sys_user u on sws.create_user_id=u.user_id
        left join ocean.sys_user s on sws.modified_user_id=s.user_id
        LEFT JOIN fantech_imes.base_organization bo ON sws.organization_id = bo.organization_id
        <where>
            1=1
            <if test="startTime !=null and startTime !='' and endTime !=null and endTime !=''">
                AND date_format(sws.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
            </if>
            <if test="sectionCode!=null and sectionCode!=''">
                and sws.section_code like CONCAT('%', #{sectionCode}, '%')
            </if>
            <if test="sectionName!=null and sectionName!=''">
                and sws.section_name like CONCAT('%', #{sectionName}, '%')
            </if>
            <if test="sectionDesc!=null and sectionDesc!=''">
                and sws.section_desc like CONCAT('%', #{sectionDesc}, '%')
            </if>
            <if test="status!=null">
                and sws.status=#{status}
            </if>
        </where>
        order by sws.create_time desc
    </select>
</mapper>