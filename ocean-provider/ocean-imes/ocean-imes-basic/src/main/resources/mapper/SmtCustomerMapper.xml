<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantechs.provider.imes.basic.mapper.SmtCustomerMapper">
  <resultMap id="BaseResultMap" type="com.fantechs.common.base.entity.basic.SmtCustomer">
    <id column="customer_id" jdbcType="BIGINT" property="customerId" />
    <result column="customer_code" jdbcType="VARCHAR" property="customerCode" />
    <result column="customer_name" jdbcType="VARCHAR" property="customerName" />
    <result column="customer_desc" jdbcType="VARCHAR" property="customerDesc" />
    <result column="status" jdbcType="TINYINT" property="status" />
    <result column="create_user_id" jdbcType="BIGINT" property="createUserId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId" />
    <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime" />
    <result column="is_delete" jdbcType="TINYINT" property="isDelete" />
    <result column="option1" jdbcType="VARCHAR" property="option1" />
    <result column="option2" jdbcType="VARCHAR" property="option2" />
    <result column="option3" jdbcType="VARCHAR" property="option3" />
  </resultMap>

  <select id="findList" parameterType="com.fantechs.common.base.entity.basic.search.SearchSmtCustomer" resultMap="BaseResultMap">
    select sc.customer_id, sc.customer_code, sc.customer_name, sc.customer_desc,sc.status, sc.create_user_id,
    u.user_name as createUserName,sc.create_time,sc.modified_user_id,
    s.user_name as modifiedUserName, sc.modified_time,sc.is_delete
    from fantech_imes.smt_customer sc
    left join ocean.sys_user u on sc.create_user_id=u.user_id
    left join ocean.sys_user s on sc.modified_user_id=s.user_id
    <where>
      1=1
      <if test="startTime !=null and startTime !='' and endTime !=null and endTime !=''">
        AND date_format(sc.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
      </if>
      <if test="customerCode!=null and customerCode!=''">
        and sc.customer_code like CONCAT('%', #{customerCode}, '%')
      </if>
      <if test="customerName!=null and customerName!=''">
        and sc.customer_name like CONCAT('%', #{customerName}, '%')
      </if>
      <if test="customerDesc!=null and customerDesc!=''">
        and sc.customer_desc like CONCAT('%', #{customerDesc}, '%')
      </if>
      <if test="status!=null and status!=''">
        and sc.status like CONCAT('%', #{status}, '%')
      </if>
    </where>
    order by sc.create_time desc
  </select>
</mapper>