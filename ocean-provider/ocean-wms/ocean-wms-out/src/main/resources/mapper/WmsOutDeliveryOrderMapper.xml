<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantechs.provider.wms.out.mapper.WmsOutDeliveryOrderMapper">
  <resultMap id="BaseResultMap" type="com.fantechs.common.base.general.entity.wms.out.WmsOutDeliveryOrder">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="delivery_order_id" jdbcType="BIGINT" property="deliveryOrderId" />
    <result column="delivery_order_code" jdbcType="VARCHAR" property="deliveryOrderCode" />
    <result column="shipping_note_code" jdbcType="VARCHAR" property="shippingNoteCode" />
    <result column="processor_user_id" jdbcType="BIGINT" property="processorUserId" />
    <result column="out_time" jdbcType="TIMESTAMP" property="outTime" />
    <result column="out_status" jdbcType="TINYINT" property="outStatus" />
    <result column="status" jdbcType="TINYINT" property="status" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
    <result column="organization_id" jdbcType="BIGINT" property="organizationId" />
    <result column="create_user_id" jdbcType="BIGINT" property="createUserId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId" />
    <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime" />
    <result column="is_delete" jdbcType="TINYINT" property="isDelete" />
  </resultMap>

  <resultMap id="BaseResultMapDTO" extends="BaseResultMap" type="com.fantechs.common.base.general.dto.wms.out.WmsOutDeliveryOrderDto">
    <result column="processor_user_name" jdbcType="VARCHAR" property="processorUserName"/>
    <result column="organization_code" jdbcType="VARCHAR" property="organizationCode"/>
    <result column="create_user_name" jdbcType="VARCHAR" property="createUserName" />
    <result column="modified_user_name" jdbcType="VARCHAR" property="modifiedUserName" />
  </resultMap>

  <sql id="Base_Column_List">
    doo.delivery_order_id,
    doo.delivery_order_code,
    doo.shipping_note_code,
    doo.processor_user_id,
    doo.out_time,
    doo.out_status,
    doo.`status`,
    doo.remark,
    doo.organization_id,
    doo.create_user_id,
    doo.create_time,
    doo.modified_user_id,
    doo.modified_time,
    doo.is_delete
  </sql>

  <select id="findList" resultMap="BaseResultMapDTO" parameterType="map">
    select<include refid="Base_Column_List"/>,
      su.user_name AS create_user_name,
      sus.user_name AS modified_user_name,
      suse.user_name AS processor_user_id,
      bo.organization_name AS organization_name
    from
        wms_out_delivery_order AS doo
    LEFT JOIN ocean.sys_user su ON doo.create_user_id = su.user_id
    LEFT JOIN ocean.sys_user sus ON doo.modified_user_id = sus.user_id
    LEFT JOIN ocean.sys_user suser ON doo.processor_user_id = suser.user_id
    LEFT JOIN base_organization bo ON doo.organization_id = bo.organization_id
    <where>
      <if test="startTime != null and startTime != '' and endTime != null and endTime != ''">
        and date_format(doo.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
      </if>
      <if test="deliveryOrderCode != null and deliveryOrderCode != ''">
        and doo.delivery_order_code like CONCAT('%', #{deliveryOrderCode}, '%')
      </if>
      <if test="shippingNoteCode != null and shippingNoteCode != ''">
        and doo.shipping_note_code like CONCAT('%', #{shippingNoteCode}, '%')
      </if>
      <if test="processorUserName != null and processorUserName != ''">
        and suser.user_name like CONCAT('%', #{processorUserName}, '%')
      </if>
    </where>
  </select>
</mapper>