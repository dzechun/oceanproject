<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantechs.provider.wms.inner.mapper.WmsInnerStorageInventoryDetMapper">

    <resultMap id="BaseResultMap" type="com.fantechs.common.base.general.entity.wms.inner.WmsInnerStorageInventoryDet">
        <id column="storage_inventory_det_id" jdbcType="BIGINT" property="storageInventoryDetId"/>
        <result column="storage_inventory_id" jdbcType="BIGINT" property="storageInventoryId"/>
        <result column="material_barcode_code" jdbcType="VARCHAR" property="materialBarcodeCode"/>
        <result column="godown_entry" jdbcType="VARCHAR" property="godownEntry"/>
        <result column="material_quantity" jdbcType="DECIMAL" property="materialQuantity"/>
        <result column="production_code" jdbcType="VARCHAR" property="productionCode"/>
        <result column="production_date" jdbcType="TIMESTAMP" property="productionDate"/>
        <result column="supplier_id" jdbcType="BIGINT" property="supplierId"/>
        <result column="organization_id" jdbcType="BIGINT" property="organizationId"/>
        <result column="status" jdbcType="TINYINT" property="status"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
        <result column="create_user_id" jdbcType="BIGINT" property="createUserId"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId"/>
        <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime"/>
        <result column="is_delete" jdbcType="TINYINT" property="isDelete"/>
    </resultMap>

    <resultMap id="BaseResultMapDto" extends="BaseResultMap"
               type="com.fantechs.common.base.general.dto.wms.inner.WmsInnerStorageInventoryDetDto">
        <result column="storage_id" jdbcType="BIGINT" property="storageId"/>
        <result column="storage_name" jdbcType="VARCHAR" property="storageName"/>
        <result column="warehouse_area_id" jdbcType="BIGINT" property="warehouseAreaId"/>
        <result column="warehouse_area_name" jdbcType="VARCHAR" property="warehouseAreaName"/>
        <result column="warehouse_id" jdbcType="BIGINT" property="warehouseId"/>
        <result column="warehouse_name" jdbcType="VARCHAR" property="warehouseName"/>
        <result column="material_id" jdbcType="BIGINT" property="materialId"/>
        <result column="material_desc" jdbcType="VARCHAR" property="materialDesc"/>
        <result column="material_name" jdbcType="VARCHAR" property="materialName"/>
        <result column="material_code" jdbcType="VARCHAR" property="materialCode"/>
        <result column="version" jdbcType="VARCHAR" property="version"/>
        <result column="storage_code" jdbcType="VARCHAR" property="storageCode"/>
        <result column="create_user_name" jdbcType="VARCHAR" property="createUserName"/>
        <result column="modified_user_name" jdbcType="VARCHAR" property="modifiedUserName"/>
        <result column="organization_name" jdbcType="VARCHAR" property="organizationName"/>
        <result column="total" jdbcType="DECIMAL" property="total"/>
    </resultMap>

    <sql id="Base_Column_List">
        wisid.storage_inventory_det_id,wisid.storage_inventory_id,wisid.material_barcode_code,wisid.godown_entry,
        wisid.material_quantity,wisid.production_code,wisid.production_date,wisid.supplier_id,
        wisid.create_user_id,wisid.create_time,wisid.modified_user_id,wisid.modified_time, wisid.organization_id,
	    wisid.remark,wisid.is_delete,wisid.status
    </sql>

    <select id="findList" resultMap="BaseResultMapDto" parameterType="map">
        SELECT<include refid="Base_Column_List"/>,
        su.user_name AS create_user_name, sus.user_name AS modified_user_name,
        bo.organization_name,ss.storage_code,ss.storage_name,ss.storage_id,
        sm.material_desc,sm.material_name,sm.material_id,sm.version,sm.material_code,
        swa.warehouse_area_name,sw.warehouse_name,swa.warehouse_area_id,sw.warehouse_id,mpm.total
        FROM wms_inner_storage_inventory_det wisid
        LEFT JOIN ocean_v2.sys_user su ON wisid.create_user_id = su.user_id
        LEFT JOIN ocean_v2.sys_user sus ON wisid.modified_user_id = sus.user_id
        LEFT JOIN fantech_imes_v2.smt_storage_inventory ssi ON ssi.storage_inventory_id = wisid.storage_inventory_id
        LEFT JOIN fantech_imes_v2.smt_storage ss ON ss.storage_id = ssi.storage_id
        LEFT JOIN fantech_imes_v2.smt_warehouse_area swa ON ss.warehouse_area_id = swa.warehouse_area_id
        LEFT JOIN fantech_imes_v2.smt_warehouse sw ON sw.warehouse_id = swa.warehouse_id
        LEFT JOIN fantech_imes_v2.base_organization bo ON wisid.organization_id = bo.organization_id
        LEFT JOIN fantech_imes_v2.smt_storage_pallet ssp ON ssp.pallet_code = wisid.material_barcode_code
        LEFT JOIN mes_package_manager mpm ON mpm.bar_code = wisid.material_barcode_code
        LEFT JOIN smt_work_order swo ON swo.work_order_id = mpm.work_order_id
        LEFT JOIN fantech_imes_v2.smt_material sm ON sm.material_id = swo.material_id
        LEFT JOIN smt_order so ON so.order_id = swo.order_id

        <where>
            <if test="isBinding!= null and isBinding !='' ">
                and (ssp.is_binding != #{isBinding} or ssp.is_binding is null)
            </if>
            <if test="materialBarcodeCode!= null and materialBarcodeCode !='' ">
                and wisid.material_barcode_code like CONCAT('%', #{materialBarcodeCode}, '%')
            </if>
            <if test="materialDesc!= null and materialDesc !='' ">
                and sm.material_desc like CONCAT('%', #{materialDesc}, '%')
            </if>
            <if test="materialId!= null and materialId !='' ">
                and sm.material_id = #{materialId}
            </if>
            <if test="contractCode!= null and contractCode !='' ">
                and so.contract_code like CONCAT('%', #{contractCode}, '%')
            </if>
            <if test="storageCode!= null and storageCode !='' ">
                and ss.storage_code like CONCAT('%', #{storageCode}, '%')
            </if>
            <if test="storageName!= null and storageName !='' ">
                and ss.storage_name like CONCAT('%', #{storageName}, '%')
            </if>
            <if test="storageId!= null and storageId !='' ">
                and ssi.storage_id = #{storageId}
            </if>
            <if test="workOrderId!= null and workOrderId !='' ">
                and mpm.work_order_id = #{workOrderId}
            </if>
            <if test="materialCode!= null and materialCode !='' ">
                and sm.material_code like CONCAT('%', #{materialCode}, '%')
            </if>
            <if test="storageInventoryId!= null and storageInventoryId !='' ">
                and wisid.storage_inventory_id = #{storageInventoryId}
            </if>
            <if test="godownEntry!= null and godownEntry !='' ">
                and wisid.godown_entry = #{godownEntry}
            </if>
            <if test="startTime!= null and startTime!= '' and endTime!= null and endTime!= ''">
                and date_format(ssi.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
            </if>
        </where>
        order by wisid.create_time desc
    </select>

    <select id="findById" resultMap="BaseResultMap"
            parameterType="java.lang.Long">
        SELECT
        <include refid="Base_Column_List"/>
        FROM smt_storage_inventory_det wisid
        where wisid.storage_inventory_id = #{storageInventoryId}
    </select>


</mapper>
