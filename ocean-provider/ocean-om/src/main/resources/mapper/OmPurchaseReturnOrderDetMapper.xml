  <select id="findList" parameterType="map" resultMap="BaseResultMapDto">
    select
    <include refid="Base_Column_List"/>,
    bm.material_code,bm.material_name,bm.material_version,bm.material_desc,
    bmb.volume,bmb.net_weight,bmb.gross_weight,
    bw.warehouse_name,opro.purchase_return_order_code,
    u.user_name as create_user_name,
    s.user_name as modified_user_name,
    bo.organization_name
    from om_purchase_return_order_det oprod
    left join om_purchase_return_order opro ON oprod.purchase_return_order_id = opro.purchase_return_order_id
    left join base_material bm on oprod.material_id = bm.material_id
    left join base_material_tab bmb ON bm.material_id = bmb.material_id
    left join base_warehouse bw on oprod.warehouse_id = bw.warehouse_id
    left join sys_user u on oprod.create_user_id=u.user_id
    left join sys_user s on oprod.modified_user_id=s.user_id
    left join base_organization bo on oprod.org_id = bo.organization_id
    <where>
      <if test="purchaseReturnOrderId != null">
        and oprod.purchase_return_order_id = #{purchaseReturnOrderId}
      </if>
      <if test="status != null">
        and oprod.status = #{status}
      </if>
      <if test="orgId != null">
        and oprod.org_id = #{orgId}
      </if>
      <if test="startTime != null and startTime != '' and endTime != null and endTime != ''">
        and date_format(oprod.create_time, '%Y-%m-%d') <![CDATA[ >= ]]> #{startTime}
        and date_format(oprod.create_time, '%Y-%m-%d') <![CDATA[ <= ]]> #{endTime}
      </if>
    </where>
    order by oprod.create_time desc
  </select>

  <update id="batchUpdate" parameterType="java.util.List">
    <foreach collection="list" item="item" separator=";">
      update om_purchase_return_order_det oprod set
      oprod.total_issue_qty = #{item.totalIssueQty},
      oprod.if_all_issued = #{item.ifAllIssued}
      where oprod.purchase_return_order_det_id = #{item.purchaseReturnOrderDetId}
    </foreach>
  </update>
