    </resultMap>

<resultMap id="BaseResultMapDTO" type="com.fantechs.common.base.general.dto.mes.pm.history.SmtHtOrderDTO" extends="BaseResultMap">

</resultMap>
  <sql id="Base_Column_List">
    sho.ht_order_id,sho.order_id, sho.order_code, sho.supplier_id, sho.material_id, sho.order_quantity, sho.delivered_quantity, sho.Inkjet_paint,
    sho.radium_carving, sho.status, sho.delivery_date, sho.photo_url, sho.create_user_id, sho.create_time, sho.modified_user_id,
    sho.modified_time, sho.is_delete, sho.option1, sho.option2, sho.option3,sho.organization_id, sho.remark,sho.freight_num
  </sql>
 <select id="selectFilterAll" resultMap="BaseResultMapDTO" parameterType="map">
   select<include refid="Base_Column_List"/>,sm.material_name, sm.material_code,sm.version,sm.material_desc,spm.product_model_name,
   ss.supplier_name, bo.organization_name,
   u.user_name as create_user_name, s.user_name as modified_user_name
   from smt_order sho
   left join ocean.sys_user u on sho.create_user_id = u.user_id
   left join ocean.sys_user s on sho.modified_user_id = s.user_id
   left join smt_material sm on sho.material_id = sm.material_id
   left join smt_supplier ss on sho.supplier_id = ss.supplier_id
   LEFT JOIN base_tab bt on bt.material_id = sm.material_id
   left join smt_product_model spm on spm.product_model_id = bt.product_model_id
   LEFT JOIN base_organization bo ON sho.organization_id = bo.organization_id
   <where>
     <if test="startTime!= null and startTime!= '' and endTime!= null and endTime!= ''">
       and date_format(sho.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
     </if>
     <if test="orderCode != null and orderCode != ''">
       and sho.order_code like CONCAT('%', #{orderCode}, '%')
     </if>
     <if test="materialId!=null and materialId!=''">
       and sho.material_id=#{materialId}
     </if>
     <if test="materialDesc!=null and materialDesc!=''">
       and sm.material_desc like CONCAT('%', #{materialDesc}, '%')
     </if>
     <if test="supplierName != null and supplierName != ''">
       and sc.supplier_name like CONCAT('%', #{supplierName}, '%')
     </if>
     <if test="status!=null">
       and sho.status=#{status}
     </if>
   </where>
   order by create_time desc
 </select>

</mapper>