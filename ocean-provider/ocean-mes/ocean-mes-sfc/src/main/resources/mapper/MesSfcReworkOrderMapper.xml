  </resultMap>

  <select id="findList" parameterType="map" resultType="com.fantechs.common.base.general.dto.mes.sfc.MesSfcReworkOrderDto">
    SELECT * FROM mes_sfc_rework_order msro
    <where>
      <if test="reworkOrderCode != null">
        and msro.rework_order_code like CONCAT('%',#{reworkOrderCode},'%')
      </if>
      <if test="reworkStatus != null">
        and msro.rework_status = #{reworkStatus}
      </if>
    </where>
  </select>

<!-- 获取今天返工单编码倒序第一条数据 -->
  <select id="getFirstTodayReworkOrder" resultType="com.fantechs.common.base.general.dto.mes.sfc.MesSfcReworkOrderDto">
    SELECT
      *
    FROM
      mes_sfc_rework_order msro
    WHERE
      msro.create_time = TO_DAYS(NOW())
    ORDER BY
      msro.rework_order_code DESC
    LIMIT 1
  </select>
</mapper>