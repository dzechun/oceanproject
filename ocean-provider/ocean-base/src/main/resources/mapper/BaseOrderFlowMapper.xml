<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fantechs.provider.base.mapper.BaseOrderFlowMapper">
  <resultMap id="BaseResultMap" type="com.fantechs.common.base.general.entity.basic.BaseOrderFlow">
    <!--
      WARNING - @mbg.generated
    -->
    <id column="order_flow_id" jdbcType="BIGINT" property="orderFlowId" />
    <result column="operation_module" jdbcType="TINYINT" property="operationModule" />
    <result column="business_type" jdbcType="TINYINT" property="businessType" />
    <result column="order_flow_dimension" jdbcType="TINYINT" property="orderFlowDimension" />
    <result column="material_id" jdbcType="BIGINT" property="materialId" />
    <result column="supplier_id" jdbcType="BIGINT" property="supplierId" />
    <result column="order_node" jdbcType="TINYINT" property="orderNode" />
    <result column="source_order" jdbcType="TINYINT" property="sourceOrder" />
    <result column="push_down_order" jdbcType="TINYINT" property="pushDownOrder" />
    <result column="status" jdbcType="TINYINT" property="status" />
    <result column="remark" jdbcType="VARCHAR" property="remark" />
    <result column="org_id" jdbcType="BIGINT" property="orgId" />
    <result column="create_user_id" jdbcType="BIGINT" property="createUserId" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="modified_user_id" jdbcType="BIGINT" property="modifiedUserId" />
    <result column="modified_time" jdbcType="TIMESTAMP" property="modifiedTime" />
    <result column="is_delete" jdbcType="TINYINT" property="isDelete" />
  </resultMap>
  <resultMap id="BaseResultMapDto" extends="BaseResultMap" type="com.fantechs.common.base.general.dto.basic.BaseOrderFlowDto">
    <result column="create_user_name" jdbcType="VARCHAR" property="createUserName"/>
    <result column="modified_user_name" jdbcType="VARCHAR" property="modifiedUserName"/>
    <result column="organization_name" jdbcType="VARCHAR" property="organizationName"/>
    <result column="material_desc" jdbcType="VARCHAR" property="materialDesc"/>
    <result column="supplier_name" jdbcType="VARCHAR" property="supplierName"/>
  </resultMap>
  <sql id="Base_Column_List">
        bof.order_flow_id,
        bof.operation_module,
        bof.business_type,
        bof.order_flow_dimension,
        bof.material_id,
        bof.supplier_id,
        bof.order_node,
        bof.source_order,
        bof.push_down_order
        bof.status,
        bof.remark,
        bof.org_id,
        bof.create_user_id,
        bof.create_time,
        bof.modified_user_id,
        bof.modified_time,
        bof.is_delete

    </sql>

  <select id="findList" resultMap="BaseResultMapDto" parameterType="map">
    SELECT<include refid="Base_Column_List"/>, su.user_name AS create_user_name,
    sus.user_name AS modified_user_name,
    bo.organization_name,
    bm.material_desc,
    bs.supplier_name
    FROM base_order_flow bof
    LEFT JOIN sys_user su ON bof.create_user_id = su.user_id
    LEFT JOIN sys_user sus ON bof.modified_user_id = sus.user_id
    LEFT JOIN base_organization bo ON bof.org_id = bo.organization_id
    LEFT JOIN base_material bm ON bof.material_id=bm.material_id
    LEFT JOIN base_supplier bs ON bof.supplier_id=bs.supplier_id
    <where>
      <if test="startTime!= null and startTime!= '' and endTime!= null and endTime!= ''">
        and date_format(bof.create_time, '%Y-%m-%d') BETWEEN #{startTime} AND #{endTime}
      </if>
      <if test="operationModule != null and operationModule != ''">
        and bof.operation_module = #{operationModule}
      </if>
      <if test="businessType != null and businessType != ''">
        and bof.business_type =#{businessType}
      </if>
      <if test="orderFlowDimension!=null and orderFlowDimension != ''">
        and bof.order_flow_dimension = #{orderFlowDimension}
      </if>
      <if test="materialId != null and materialId != ''">
        and bof.material_id = #{materialId}
      </if>
      <if test="supplierId != null and supplierId != ''">
        and bof.supplier_id = #{supplierId}
      </if>
      <if test="orderNode != null and orderNode != ''">
        and bof.order_node = #{orderNode}
      </if>
      <if test="sourceOrder != null and sourceOrder != ''">
        and bof.source_order = #{sourceOrder}
      </if>
      <if test="pushDownOrder != null and pushDownOrder != ''">
        and bof.push_down_order = #{pushDownOrder}
      </if>

      <if test="remark != null and remark != ''">
        and bof.remark like CONCAT('%', #{remark}, '%')
      </if>

      <if test="status!=null">
        and bof.status=#{status}
      </if>
      <if test="orgId!=null">
        and bof.org_id=#{orgId}
      </if>
    </where>
    order by bof.create_time desc
  </select>
</mapper>